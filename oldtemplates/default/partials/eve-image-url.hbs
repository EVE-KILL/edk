{{!
  EVE Image URL Builder
  Internal partial that constructs the correct images.eve-kill.com URL
  Uses roundImageSize helper to ensure valid sizes: 32, 64, 128, 256, 512
}}
{{~#if (eq type 'character')~}}
  https://images.eve-kill.com/characters/{{id}}/{{#if
    variant
  }}{{variant}}{{else}}portrait{{/if}}?size={{roundImageSize
    (default size 64)
    type
  }}
{{~else if (eq type 'corporation')~}}
  https://images.eve-kill.com/corporations/{{id}}/{{#if
    variant
  }}{{variant}}{{else}}logo{{/if}}?size={{roundImageSize
    (default size 64)
    type
  }}
{{~else if (eq type 'alliance')~}}
  https://images.eve-kill.com/alliances/{{id}}/{{#if
    variant
  }}{{variant}}{{else}}logo{{/if}}?size={{roundImageSize
    (default size 64)
    type
  }}
{{~else if (eq type 'ship')~}}
  https://images.eve-kill.com/types/{{id}}/{{#if
    variant
  }}{{variant}}{{else}}overlayrender{{/if}}?size={{roundImageSize
    (default size 64)
    type
  }}
{{~else if (eq type 'item')~}}
  https://images.eve-kill.com/types/{{id}}/icon?size={{roundImageSize
    (default size 64)
    type
  }}
{{~else if (eq type 'type')~}}
  https://images.eve-kill.com/types/{{id}}/{{#if
    variant
  }}{{variant}}{{else}}icon{{/if}}?size={{roundImageSize
    (default size 64)
    type
  }}
{{~else if (eq type 'system')~}}
  https://images.eve-kill.com/systems/{{id}}?size={{roundImageSize
    (default size 64)
    type
  }}
{{~else if (eq type 'region')~}}
  https://images.eve-kill.com/regions/{{id}}?size={{roundImageSize
    (default size 64)
    type
  }}
{{~else if (eq type 'constellation')~}}
  https://images.eve-kill.com/constellations/{{id}}?size={{roundImageSize
    (default size 64)
    type
  }}
{{~else~}}
  https://images.eve-kill.com/types/{{id}}/icon?size={{roundImageSize
    (default size 64)
    type
  }}
{{~/if~}}