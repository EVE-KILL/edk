{{!--
  Ship Group Combined Statistics Component
  Displays ship group kill and loss statistics in a 3-column grid with soft aesthetic

  Usage:
  {{> components/ship-group-combined-stats shipGroupStats=shipGroupStats}}

  Props:
  - shipGroupStats: array of {groupId, groupName, killed, lost}
--}}
{{#if shipGroupStats.length}}
  <div class='ship-stats-grid'>
    {{#each shipGroupColumns}}
      <div class='ship-stats-box'>
        <div class='ship-stats-content'>
          {{#each this}}
            <div class='ship-stats-row'>
              <span class='ship-stats-name'>{{this.groupName}}</span>
              <div class='ship-stats-dual'>
                <span class='ship-stats-killed'>{{this.killed}}</span>
                <span class='ship-stats-lost'>{{this.lost}}</span>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/each}}
  </div>

  <style>
    .ship-stats-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 8px;
      margin-bottom: 16px;
    }

    @media (min-width: 768px) {
      .ship-stats-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (min-width: 1024px) {
      .ship-stats-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    .ship-stats-box {
      background: var(--color-bg-tertiary);
      border: 1px solid var(--color-border-dark);
      border-radius: 4px;
      overflow: hidden;
    }

    .ship-stats-content {
      display: flex;
      flex-direction: column;
      gap: 0;
    }

    .ship-stats-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 6px 12px;
      background: rgba(0, 0, 0, 0.2);
      border-bottom: 1px solid var(--color-border-dark);
      transition: background-color 0.2s ease;
      font-size: 10px;
    }

    .ship-stats-row:last-child {
      border-bottom: none;
    }

    .ship-stats-row:hover {
      background: rgba(74, 158, 255, 0.15);
    }

    .ship-stats-name {
      color: var(--color-text-white);
      font-size: 11px;
      font-weight: 500;
      min-width: 0;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      flex: 1;
    }

    .ship-stats-dual {
      display: flex;
      gap: 12px;
      flex-shrink: 0;
      margin-left: 12px;
    }

    .ship-stats-killed {
      color: #4ade80;
      font-weight: 700;
      font-size: 12px;
      text-align: right;
      min-width: 40px;
    }

    .ship-stats-lost {
      color: #ef4444;
      font-weight: 700;
      font-size: 12px;
      text-align: right;
      min-width: 40px;
    }
  </style>
{{/if}}