# Postgres Configuration
# Host where Postgres is running (use 'postgres' for Docker Compose service name)
POSTGRES_HOST=localhost
# Port (default: 5432)
POSTGRES_PORT=5432
# Database name to use
POSTGRES_DB=edk
# Username for Postgres authentication
POSTGRES_USER=edk_user
# Password for Postgres authentication
POSTGRES_PASSWORD=your_postgres_password_here
# Connection string
DATABASE_URL=postgresql://edk_user:your_postgres_password_here@localhost:5432/edk

# Redis Configuration
# Host where Redis is running (use 'redis' for Docker Compose service name)
REDIS_HOST=localhost
# Redis port (default: 6379)
REDIS_PORT=6379
# Password for Redis authentication
REDIS_PASSWORD=your_redis_password_here
# Full Redis URL with authentication
REDIS_URL=redis://:your_redis_password_here@localhost:6379

# Additional Notes:
# - Change the passwords to secure values in production
# - When running with Docker Compose, you can use service names (postgres, redis) instead of localhost
# - For production, consider using Docker secrets or external secret management
# - The default Redis database is 0, you can change it by modifying the number at the end of the URL
\nIMAGE_SERVER_URL=https://images.esitech.net
