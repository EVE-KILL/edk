# Application
NODE_ENV=development
THEME=default
SITE_TITLE=EVE-KILL
SITE_SUBTITLE=Real-time Killmail Tracking
IMAGE_SERVER_URL=https://images.evetech.net
ESI_SERVER_URL=https://esi.evetech.net

# Database
DATABASE_URL=postgresql://edk_user:edk_password@localhost:5432/edk
DB_USER=edk_user
DB_PASSWORD=edk_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=edk
POSTGRES_DB=edk
ADMIN_DB_NAME=edk
# ADMIN_DATABASE_URL=postgresql://postgres:password@localhost:5432/postgres
TEST_DB_NAME=edk_test

# Database Pool Configuration
# Recommended sizes:
# - Development: 5-10
# - Production (small): 20-50
# - Production (large): 50-100
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=20
DB_CONNECT_TIMEOUT=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
# REDISQ_ID=your_redisq_id_here

# Typesense
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_API_KEY=xyz

# Rate limits
RATE_LIMIT_KILLMAIL_WINDOW=60
RATE_LIMIT_KILLMAIL_MAX=50
RATE_LIMIT_DEFAULT_WINDOW=60
RATE_LIMIT_DEFAULT_MAX=100

# Tracking (optional)
FOLLOWED_CHARACTER_IDS=
FOLLOWED_CORPORATION_IDS=
FOLLOWED_ALLIANCE_IDS=

# WebSocket server
WS_PORT=3002
WS_HOST=0.0.0.0
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=10000
WS_CLEANUP_INTERVAL=60000
