<!-- Killmail Victim Information Box - EDK Style -->

<!-- Victim Character/Corp/Alliance -->
<div style="background: var(--color-bg-tertiary); border: 1px solid var(--color-border-dark); border-radius: 4px; margin-bottom: 10px; overflow: visible; position: relative;">
    <div style="padding: 12px 16px; border-bottom: 1px solid var(--color-border-dark);">
        <div style="color: var(--color-text-white); font-weight: 600; font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px;">
            Victim
            {{#if stats.isSolo}}
            <span class="kl-kill" style="margin-left: 8px; font-size: 9px; padding: 2px 6px; border-radius: 3px;">SOLO</span>
            {{/if}}
            {{#if (gte stats.totalValue 1000000000)}}
            <span class="kl-loss" style="margin-left: 8px; font-size: 9px; padding: 2px 6px; border-radius: 3px;">HIGH VALUE</span>
            {{/if}}
        </div>
    </div>
    <div style="padding: 12px 16px; display: flex; gap: 12px; align-items: flex-start;">
        <div style="flex-shrink: 0;">
            {{#if victim.character.id}}
            <a href="/character/{{victim.character.id}}">
                {{> partials/eve-image type="character" id=victim.character.id size=64 alt=victim.character.name lazy=false}}
            </a>
            {{else}}
                {{> partials/eve-image type="ship" id=victim.ship.typeId size=64 alt=victim.ship.name lazy=false}}
            {{/if}}
        </div>
        <div style="flex: 1; font-size: 10px; line-height: 1.4;">
            <div style="margin-bottom: 3px;">
                <b style="font-size: 11px;">
                    {{#if victim.character.id}}
                    {{#if victim.character.name}}
                    <span data-character-id="{{victim.character.id}}">
                    <a href="/character/{{victim.character.id}}" style="color: var(--color-accent-blue-light); text-decoration: none;">{{victim.character.name}}</a>
                    </span>
                    {{else}}
                    <span data-character-id="{{victim.character.id}}">
                    <a href="/character/{{victim.character.id}}" style="color: var(--color-accent-blue-light); text-decoration: none;">Pilot #{{victim.character.id}}</a>
                    </span>
                    {{/if}}
                    {{else}}
                    {{victim.ship.name}}
                    {{/if}}
                </b>
            </div>
            {{#if victim.corporation.name}}
            <div style="color: var(--color-text-secondary);">
                {{#if victim.corporation.id}}
                <span data-corporation-id="{{victim.corporation.id}}">
                <a href="/corporation/{{victim.corporation.id}}" style="color: var(--color-text-secondary); text-decoration: none;">{{victim.corporation.name}}</a>
                </span>
                {{else}}
                {{victim.corporation.name}}
                {{/if}}
            </div>
            {{/if}}
            {{#if victim.alliance.name}}
            <div style="color: var(--color-text-secondary);">
                {{#if victim.alliance.id}}
                <span data-alliance-id="{{victim.alliance.id}}">
                <a href="/alliance/{{victim.alliance.id}}" style="color: var(--color-text-secondary); text-decoration: none;">{{victim.alliance.name}}</a>
                </span>
                {{else}}
                {{victim.alliance.name}}
                {{/if}}
            </div>
            {{/if}}
        </div>
    </div>
    <div style="padding: 0 16px 12px 16px; display: flex; justify-content: space-between; align-items: center; gap: 20px; flex-wrap: wrap;">
        <div>
            <div style="color: var(--color-text-secondary); font-size: 9px; font-weight: 600; text-transform: uppercase; margin-bottom: 4px;">Ship</div>
            <div style="font-size: 10px;">
                {{#if victim.ship.typeId}}
                <a href="/item/{{victim.ship.typeId}}" style="color: var(--color-accent-blue-light); text-decoration: none;">{{victim.ship.name}}</a>
                {{else}}
                {{victim.ship.name}}
                {{/if}}
                {{#if victim.ship.groupName}}
                <span style="color: var(--color-text-secondary);"> ({{victim.ship.groupName}})</span>
                {{/if}}
            </div>
        </div>
        <div>
            <div style="color: var(--color-text-secondary); font-size: 9px; font-weight: 600; text-transform: uppercase; margin-bottom: 4px;">Damage</div>
            <div style="font-size: 10px;">
                <span class="kl-loss" style="font-weight: bold;">{{formatNumber victim.damageTaken}}</span>
            </div>
        </div>
    </div>
</div>

<!-- Kill Details -->
<div style="background: var(--color-bg-tertiary); border: 1px solid var(--color-border-dark); border-radius: 4px; margin-bottom: 10px; overflow: visible; position: relative;">
    <div style="padding: 12px 16px; border-bottom: 1px solid var(--color-border-dark);">
        <div style="color: var(--color-text-white); font-weight: 600; font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px;">
            Kill Details
        </div>
    </div>
    <div style="padding: 12px 16px; display: flex; flex-direction: column; gap: 12px;">
        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
            <div style="color: var(--color-text-secondary); font-size: 9px; font-weight: 600; text-transform: uppercase;">System</div>
            <div style="text-align: right; font-size: 10px;">
                {{#if solarSystem.id}}
                <a href="/system/{{solarSystem.id}}" style="color: var(--color-accent-blue-light); text-decoration: none; font-weight: 600;"><b>{{solarSystem.name}}</b></a>
                {{else}}
                <b>{{solarSystem.name}}</b>
                {{/if}}
                <span style="padding: 1px 4px; font-size: 9px; border-radius: 2px; margin-left: 4px; {{#if (gte solarSystem.securityStatus 0.5)}}background: #2F75FE; color: white;{{else}}{{#if (gte solarSystem.securityStatus 0.1)}}background: #F9A825; color: black;{{else}}background: #D32F2F; color: white;{{/if}}{{/if}}">
                    {{formatSecurity solarSystem.securityStatus}}
                </span>
                {{#if region.id}}
                <div style="color: var(--color-text-secondary); margin-top: 4px;"><a href="/region/{{region.id}}" style="color: var(--color-text-secondary); text-decoration: none;">{{region.name}}</a></div>
                {{/if}}
            </div>
        </div>
        <div style="border-top: 1px solid var(--color-border-dark); padding-top: 12px; display: flex; justify-content: space-between; align-items: flex-start;">
            <div style="color: var(--color-text-secondary); font-size: 9px; font-weight: 600; text-transform: uppercase;">Time</div>
            <div style="text-align: right; font-size: 10px;">
                <div>{{formatDate killmail.killmailTime}}</div>
                <div style="color: var(--color-text-secondary); font-size: 9px;">{{formatTimeAgo killmail.killmailTime}}</div>
            </div>
        </div>
    </div>
</div>

<!-- ISK Value -->
<div style="background: var(--color-bg-tertiary); border: 1px solid var(--color-border-dark); border-radius: 4px; overflow: visible; position: relative;">
    <div style="padding: 12px 16px; border-bottom: 1px solid var(--color-border-dark);">
        <div style="color: var(--color-text-white); font-weight: 600; font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px;">
            ISK Value
        </div>
    </div>
    <div style="padding: 12px 16px; display: flex; flex-direction: column; gap: 8px;">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div style="color: var(--color-text-secondary); font-size: 9px; font-weight: 600;">Destroyed:</div>
            <div style="color: var(--color-kill-green); font-weight: bold;">{{formatISK stats.destroyedValue}}</div>
        </div>
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div style="color: var(--color-text-secondary); font-size: 9px; font-weight: 600;">Dropped:</div>
            <div style="color: var(--color-kill-green); font-weight: bold;">{{formatISK stats.droppedValue}}</div>
        </div>
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div style="color: var(--color-text-secondary); font-size: 9px; font-weight: 600;">Ship:</div>
            <div style="color: var(--color-kill-green); font-weight: bold;">{{formatISK stats.shipValue}}</div>
        </div>
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div style="color: var(--color-text-secondary); font-size: 9px; font-weight: 600;">Fitting:</div>
            <div style="color: var(--color-kill-green); font-weight: bold;">{{formatISK stats.fitValue}}</div>
        </div>
        <div style="border-top: 1px solid var(--color-border-dark); padding-top: 8px; display: flex; justify-content: space-between; align-items: center;">
            <div style="color: var(--color-text-secondary); font-size: 9px; font-weight: 600; text-transform: uppercase;">Total:</div>
            <div style="color: var(--color-kill-green); font-weight: bold; font-size: 11px;">{{formatISK stats.totalValue}}</div>
        </div>
    </div>
</div>
