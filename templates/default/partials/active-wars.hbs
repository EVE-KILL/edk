{{!-- Active Wars Partial --}}
{{#if activeWars}}
{{#if activeWars.length}}
<div style="background: var(--color-bg-tertiary); border: 1px solid var(--color-border-dark); border-radius: var(--radius-sm); margin-bottom: 20px; overflow: hidden;">
  <div style="padding: 12px 16px; border-bottom: 1px solid var(--color-border-dark);">
    <div style="color: var(--color-text-white); font-weight: 600; font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px;">
      ⚔️ Active Wars ({{activeWars.length}})
    </div>
  </div>
  <div style="padding: 12px 16px;">
    {{#each activeWars}}
    <div style="padding: 8px 0; border-bottom: 1px solid var(--color-border-dark); {{#if @last}}border-bottom: none;{{/if}}">
      <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 4px;">
        <span style="font-size: 11px; font-weight: 600; color: var(--color-damage-red);">
          <a href="/{{aggressorType}}/{{aggressorId}}" style="color: var(--color-damage-red); text-decoration: none;">{{aggressorName}}</a>
        </span>
        <span style="color: var(--color-text-secondary); font-size: 10px;">vs</span>
        <span style="font-size: 11px; font-weight: 600; color: var(--color-accent-blue);">
          <a href="/{{defenderType}}/{{defenderId}}" style="color: var(--color-accent-blue); text-decoration: none;">{{defenderName}}</a>
        </span>
        {{#if mutual}}
        <span style="background: var(--color-damage-red); color: white; font-size: 8px; padding: 2px 4px; border-radius: var(--radius-sm); font-weight: 600;">MUTUAL</span>
        {{/if}}
      </div>
      <div style="display: flex; gap: 12px; font-size: 9px; color: var(--color-text-secondary);">
        {{#if started}}
        <span>Started: {{formatDate started}}</span>
        {{/if}}
        <a href="/wars/{{warId}}" style="color: var(--color-accent-blue); text-decoration: none;">View War →</a>
      </div>
    </div>
    {{/each}}
  </div>
</div>
{{/if}}
{{/if}}
