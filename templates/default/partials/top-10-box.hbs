{{#if items}}
<div class="top-10-box">
  <div class="top-10-header">{{title}}</div>
  <div class="top-10-content">
    {{#each items}}
    <div class="top-10-row" onclick="window.location.href='{{this.link}}';" style="cursor: pointer;">
      <div class="top-10-img-wrapper">
        {{#if this.imageType}}
          {{> partials/eve-image type=this.imageType id=this.imageId size=24 alt=this.name lazy=false}}
        {{/if}}
      </div>
      <span class="top-10-name"{{#if this.dataAttribute}} {{this.dataAttribute}}="{{this.imageId}}"{{/if}}>{{this.name}}</span>
      <span class="top-10-kills">{{this.kills}}</span>
    </div>
    {{/each}}
  </div>
  {{#if timeRange}}<div class="top-10-footer">{{timeRange}}</div>{{/if}}
</div>

<style>
.top-10-box {
  background: var(--color-bg-tertiary);
  border: 1px solid var(--color-border-dark);
  border-radius: var(--radius-sm);
  overflow: hidden;
}

.top-10-header {
  background: transparent;
  padding: 12px 16px;
  font-weight: 600;
  font-size: 12px;
  color: var(--color-text-white);
  border-bottom: 1px solid var(--color-border-dark);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.top-10-content {
  display: flex;
  flex-direction: column;
  gap: 0;
  width: 100%;
}

.top-10-row {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px 16px;
  border-bottom: 1px solid var(--color-border-dark);
  font-size: 10px;
  transition: background-color 0.2s ease;
  background: rgba(0, 0, 0, 0.2);
}

.top-10-row:last-child {
  border-bottom: none;
}

.top-10-row:hover {
  background: rgba(74, 158, 255, 0.15);
}

.top-10-img-wrapper {
  position: relative;
  flex-shrink: 0;
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.top-10-img-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: var(--radius-sm);
}

.top-10-name {
  flex: 1;
  min-width: 0;
  color: var(--color-text-white);
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.top-10-row:hover .top-10-name {
  color: var(--color-text-white);
  text-decoration: underline;
}

.top-10-kills {
  color: #10b981;
  font-weight: bold;
  font-size: 10px;
  white-space: nowrap;
}

.top-10-footer {
  padding: 8px 0;
  border-top: 1px solid var(--color-border-dark);
  color: var(--color-text-secondary);
  font-size: 9px;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}
</style>
{{/if}}
