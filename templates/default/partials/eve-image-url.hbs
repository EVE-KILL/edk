{{~#if (eq type 'character')~}}
  {{@root.config.imageServerUrl}}/characters/{{id}}/portrait?size={{roundImageSize
    (fallback size 64)
    type
  }}
{{~else if (eq type 'corporation')~}}
  {{@root.config.imageServerUrl}}/corporations/{{id}}/logo?size={{roundImageSize
    (fallback size 64)
    type
  }}
{{~else if (eq type 'alliance')~}}
  {{@root.config.imageServerUrl}}/alliances/{{id}}/logo?size={{roundImageSize
    (fallback size 64)
    type
  }}
{{~else if (eq type 'ship')~}}
  {{@root.config.imageServerUrl}}/types/{{id}}/overlayrender?size={{roundImageSize
    (fallback size 64)
    type
  }}
{{~else if (eq type 'item')~}}
  {{~!-- Handle Blueprint Originals (singleton=1) and Blueprint Copies (singleton=2) --}}
  {{~#if (eq singleton 1)~}}
    {{@root.config.imageServerUrl}}/types/{{id}}/bp?size={{roundImageSize
      (fallback size 64)
      type
    }}
  {{~else if (eq singleton 2)~}}
    {{@root.config.imageServerUrl}}/types/{{id}}/bpc?size={{roundImageSize
      (fallback size 64)
      type
    }}
  {{~else~}}
    {{@root.config.imageServerUrl}}/types/{{id}}/icon?size={{roundImageSize
      (fallback size 64)
      type
    }}
  {{~/if~}}
{{~else if (eq type 'type')~}}
  {{@root.config.imageServerUrl}}/types/{{id}}/icon?size={{roundImageSize
    (fallback size 64)
    type
  }}
{{~else if (eq type 'system')~}}
  {{@root.config.imageServerUrl}}/systems/{{id}}?size={{roundImageSize
    (fallback size 64)
    type
  }}
{{~else if (eq type 'region')~}}
  {{@root.config.imageServerUrl}}/regions/{{id}}?size={{roundImageSize
    (fallback size 64)
    type
  }}
{{~else if (eq type 'constellation')~}}
  {{@root.config.imageServerUrl}}/constellations/{{id}}?size={{roundImageSize
    (fallback size 64)
    type
  }}
{{~else~}}
  {{@root.config.imageServerUrl}}/types/{{id}}/icon?size={{roundImageSize
    (fallback size 64)
    type
  }}
{{~/if~}}
