{{!-- Item Row Partial - Displays a single item row with image, name, and stats --}}
<tr class="kb-table-row-odd" style="cursor: pointer;" onclick="window.location.href='/item/{{typeId}}'">
    <td class="kb-table-cell" style="padding: 4px 8px;">
        <div style="display: flex; align-items: center; gap: 8px;">
            {{> partials/eve-image type="item" id=typeId size=32 alt=name}}
            <span>{{name}}</span>
        </div>
    </td>
    <td class="kb-table-cell" style="text-align: center; padding: 4px 8px;">{{quantity}}</td>
    <td class="kb-table-cell" style="text-align: right; padding: 4px 8px;">
        {{#if price}}
            <span title="Average: {{formatISK price.average}}">{{formatISK price.average}}</span>
        {{else}}
            <span style="color: #999;">N/A</span>
        {{/if}}
    </td>
    <td class="kb-table-cell" style="text-align: right; padding: 4px 8px;">
        {{#if totalValue}}
            <span class="isk-value">{{formatISK totalValue}}</span>
        {{else}}
            <span style="color: #999;">N/A</span>
        {{/if}}
    </td>
    <td class="kb-table-cell" style="text-align: center; padding: 4px 8px;">
        <span class="{{#if isDestroyed}}kl-loss{{else}}kl-kill{{/if}}">{{#if isDestroyed}}Destroyed{{else}}Dropped{{/if}}</span>
    </td>
</tr>
