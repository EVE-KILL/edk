<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle all dropdown menus
    const dropdownBtns = document.querySelectorAll('.killmail-nav__btn--dropdown');

    dropdownBtns.forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.stopPropagation();
            const menu = this.nextElementSibling;
            if (menu && menu.classList.contains('killmail-nav__dropdown-menu')) {
                // Close other open menus
                document.querySelectorAll('.killmail-nav__dropdown-menu--active').forEach(m => {
                    if (m !== menu) m.classList.remove('killmail-nav__dropdown-menu--active');
                });
                menu.classList.toggle('killmail-nav__dropdown-menu--active');
            }
        });
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', function() {
        document.querySelectorAll('.killmail-nav__dropdown-menu--active').forEach(m => {
            m.classList.remove('killmail-nav__dropdown-menu--active');
        });
    });

    // Don't close when clicking inside dropdown
    document.querySelectorAll('.killmail-nav__dropdown-menu').forEach(menu => {
        menu.addEventListener('click', function(e) {
            e.stopPropagation();
        });
    });
});
</script>
