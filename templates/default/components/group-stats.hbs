{{!--
  Group Stats Header Component
  Header for group (ship group) pages showing stats and group info

  Usage:
  {{> components/group-stats
      groupId=groupId
      name=name
      groupStats=groupStats
      group=group
      category=category
      totalTypes=totalTypes
  }}

  Props:
  - groupId: number (group ID)
  - name: string (group name)
  - groupStats: object (group statistics)
  - group: object (group data)
  - category: object (category data)
  - totalTypes: number (number of types in this group)
--}}
<div class="entity-hero">
  <div class="entity-hero__container">
    <div class="entity-hero__content">
      <!-- Group Icon (if available) -->
      <div class="entity-hero__image-section">
        <div class="entity-hero__image-wrapper" style="display: flex; align-items: center; justify-content: center; background: rgba(0, 0, 0, 0.3); border: 1px solid var(--color-border-dark); border-radius: var(--radius-sm);">
          {{#if group.iconId}}
            <img src="https://images.evetech.net/types/{{group.iconId}}/icon?size=256" alt="{{name}}" class="entity-hero__image" style="max-width: 100%; max-height: 100%; object-fit: contain;" />
          {{else}}
            <div style="color: var(--color-text-secondary); font-size: 64px; font-weight: 700; text-align: center;">
              <svg xmlns="http://www.w3.org/2000/svg" width="128" height="128" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
              </svg>
            </div>
          {{/if}}
        </div>
      </div>

      <div class="entity-hero__info-wrapper">
        <!-- Statistics (full width) -->
        <div class="entity-stats entity-stats--full">
          <div class="entity-stats__header">Statistics</div>
          <div class="entity-stats__content">
            <div class="entity-stats__row">
              <span class="entity-stats__label">Kills:</span>
              <span class="entity-stats__value color-green">{{formatNumber groupStats.kills}}</span>
            </div>
            <div class="entity-stats__row">
              <span class="entity-stats__label">Losses:</span>
              <span class="entity-stats__value color-red">{{formatNumber groupStats.losses}}</span>
            </div>
            <div class="entity-stats__row">
              <span class="entity-stats__label">Kill/Loss Ratio:</span>
              <span class="entity-stats__value color-gold">{{formatNumber groupStats.killLossRatio}}</span>
            </div>
            <div class="entity-stats__row">
              <span class="entity-stats__label">Efficiency:</span>
              <span class="entity-stats__value color-gold">{{formatNumber groupStats.efficiency}}%</span>
            </div>
            <div class="entity-stats__row">
              <span class="entity-stats__label">ISK Destroyed:</span>
              <span class="entity-stats__value color-green">{{formatISK groupStats.iskDestroyed}}</span>
            </div>
            <div class="entity-stats__row">
              <span class="entity-stats__label">ISK Lost:</span>
              <span class="entity-stats__value color-red">{{formatISK groupStats.iskLost}}</span>
            </div>
            <div class="entity-stats__row">
              <span class="entity-stats__label">ISK Efficiency:</span>
              <span class="entity-stats__value color-gold">{{formatNumber groupStats.iskEfficiency}}%</span>
            </div>
          </div>
        </div>

        <!-- Group Details (full width) -->
        <div class="entity-stats entity-stats--full">
          <div class="entity-stats__header">Group Details</div>
          <div class="entity-stats__content">
            {{#if category}}
            <div class="entity-stats__row">
              <span class="entity-stats__label">Category:</span>
              <span class="entity-stats__value">
                <a href="/category/{{category.categoryId}}" class="entity-link">{{category.name}}</a>
              </span>
            </div>
            {{/if}}
            <div class="entity-stats__row">
              <span class="entity-stats__label">Total Types:</span>
              <span class="entity-stats__value">{{formatNumber totalTypes}}</span>
            </div>
            {{#if group.published}}
            <div class="entity-stats__row">
              <span class="entity-stats__label">Published:</span>
              <span class="entity-stats__value color-green">Yes</span>
            </div>
            {{/if}}
          </div>
        </div>
      </div><!-- .entity-hero__info-wrapper -->
    </div><!-- .entity-hero__content -->
  </div><!-- .entity-hero__container -->
</div><!-- .entity-hero -->

<style>
.entity-hero {
  margin-bottom: var(--spacing-lg);
  width: 100%;
}

.entity-hero__container {
  background: var(--color-bg-tertiary);
  border: 1px solid var(--color-border-dark);
  border-radius: var(--radius-sm);
  overflow: hidden;
  width: 100%;
}

.entity-hero__content {
  display: flex;
  gap: 16px;
  align-items: start;
  padding: 16px;
}

.entity-hero__image-section {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.entity-hero__image-wrapper {
  width: 256px;
  height: 256px;
}

.entity-hero__image {
  width: 100%;
  height: 100%;
  border-radius: var(--radius-sm);
  display: block;
}

.entity-hero__info-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12px;
  min-width: 0;
}

.entity-stats {
  background: rgba(0, 0, 0, 0.2);
  border: 1px solid var(--color-border-dark);
  border-radius: var(--radius-sm);
  overflow: hidden;
  flex: 1;
  min-width: 0;
}

.entity-stats--full {
  width: 100%;
  flex: none;
}

.entity-stats__header {
  background: transparent;
  padding: 12px 16px;
  font-weight: 600;
  font-size: 11px;
  color: var(--color-text-secondary);
  border-bottom: 1px solid var(--color-border-dark);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.entity-stats__content {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.entity-stats__row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 16px;
  background: rgba(0, 0, 0, 0.2);
  border-bottom: 1px solid var(--color-border-dark);
  transition: background-color 0.2s ease;
  gap: 12px;
}

.entity-stats__row:last-child {
  border-bottom: none;
}

.entity-stats__row:hover {
  background: rgba(74, 158, 255, 0.15);
}

.entity-stats__label {
  color: var(--color-text-secondary);
  font-size: 10px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.3px;
  white-space: nowrap;
}

.entity-stats__value {
  font-weight: 700;
  font-size: 11px;
  text-align: right;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 2px;
}

.entity-link {
  color: var(--color-accent-blue-bright);
  text-decoration: none;
  transition: color var(--transition-normal);
}

.entity-link:hover {
  color: var(--color-accent-gold);
  text-decoration: underline;
}

.color-green {
  color: #4ade80;
}

.color-red {
  color: #ef4444;
}

.color-gold {
  color: #fbbf24;
}

@media (max-width: 768px) {
  .entity-hero__content {
    flex-direction: column;
    gap: 16px;
  }

  .entity-hero__image-section {
    margin: 0 auto;
  }
}
</style>
