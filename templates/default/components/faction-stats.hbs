{{!--
  Faction Stats Header Component
  Custom header for faction pages showing image, kill count, and faction info

  Usage:
  {{> components/faction-stats
      factionId=factionId
      name=name
      imageUrl=imageUrl
      kills=kills
      faction=faction
  }}

  Props:
  - factionId: number (faction ID)
  - name: string (faction name)
  - imageUrl: string (faction logo)
  - kills: number (total kills for faction)
  - faction: object (faction data with homeSystem, corporation, etc.)
--}}
<div class="system-hero">
  <div class="system-hero__container">
    <div class="system-hero__content">
      <!-- Faction Logo -->
      <div class="system-hero__image-section">
        <div class="system-hero__image-wrapper">
          <img src="{{imageUrl}}" alt="{{name}}" class="system-hero__image" />
        </div>
      </div>

      <!-- Faction Info Grid -->
      <div class="system-hero__info">
        <!-- Kill Stats (prominent) -->
        <div class="system-hero__stat-card system-hero__stat-card--prominent">
          <div class="system-hero__stat-header">Statistics</div>
          <div class="system-hero__stat-content">
            <div class="system-hero__stat-row">
              <span class="system-hero__stat-label">Kills:</span>
              <span class="system-hero__stat-value color-green">{{formatNumber kills}}</span>
            </div>
          </div>
        </div>

        <!-- Home System -->
        {{#if faction.homeSystem}}
        <div class="system-hero__stat-card">
          <div class="system-hero__stat-header">Home System</div>
          <div class="system-hero__stat-content">
            <div class="system-hero__stat-row">
              <span class="system-hero__stat-label">System:</span>
              <span class="system-hero__stat-value">
                <a href="/system/{{faction.homeSystem.solarSystemId}}" class="system-hero__link">{{faction.homeSystem.name}}</a>
              </span>
            </div>
            {{#if faction.homeSystem.regionName}}
            <div class="system-hero__stat-row">
              <span class="system-hero__stat-label">Region:</span>
              <span class="system-hero__stat-value">
                <a href="/region/{{faction.homeSystem.regionId}}" class="system-hero__link">{{faction.homeSystem.regionName}}</a>
              </span>
            </div>
            {{/if}}
          </div>
        </div>
        {{/if}}

        <!-- Corporation Info -->
        {{#if faction.corporation}}
        <div class="system-hero__stat-card">
          <div class="system-hero__stat-header">Corporation</div>
          <div class="system-hero__stat-content">
            <div class="system-hero__stat-row">
              <span class="system-hero__stat-label">Main Corp:</span>
              <span class="system-hero__stat-value">
                <a href="/corporation/{{faction.corporation.corporationId}}" class="system-hero__link">{{faction.corporation.name}}</a>
              </span>
            </div>
            {{#if faction.militiaCorporation}}
            <div class="system-hero__stat-row">
              <span class="system-hero__stat-label">Militia:</span>
              <span class="system-hero__stat-value">
                {{faction.militiaCorporation.name}}
              </span>
            </div>
            {{/if}}
          </div>
        </div>
        {{/if}}

        <!-- Additional Info (size factor, stations, etc.) -->
        {{#if faction.sizeFactor}}
        <div class="system-hero__stat-card">
          <div class="system-hero__stat-header">Details</div>
          <div class="system-hero__stat-content">
            <div class="system-hero__stat-row">
              <span class="system-hero__stat-label">Size Factor:</span>
              <span class="system-hero__stat-value">{{faction.sizeFactor}}</span>
            </div>
            {{#if faction.stationCount}}
            <div class="system-hero__stat-row">
              <span class="system-hero__stat-label">Stations:</span>
              <span class="system-hero__stat-value">{{formatNumber faction.stationCount}}</span>
            </div>
            {{/if}}
          </div>
        </div>
        {{/if}}

      </div>
    </div>
  </div>
</div>

<style>
.system-hero {
  margin-bottom: var(--spacing-lg);
  width: 100%;
}

.system-hero__container {
  background: var(--color-bg-tertiary);
  border: 1px solid var(--color-border-dark);
  border-radius: var(--radius-sm);
  overflow: hidden;
  width: 100%;
}

.system-hero__content {
  display: flex;
  gap: 16px;
  align-items: start;
  padding: 16px;
}

.system-hero__image-section {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.system-hero__image-wrapper {
  width: 256px;
  height: 256px;
}

.system-hero__image {
  width: 100%;
  height: 100%;
  border-radius: var(--radius-sm);
  display: block;
}

.system-hero__info {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 12px;
  min-width: 0;
}

.system-hero__stat-card {
  background: rgba(0, 0, 0, 0.2);
  border: 1px solid var(--color-border-dark);
  border-radius: var(--radius-sm);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.system-hero__stat-card--prominent {
  grid-column: 1 / -1;
}

.system-hero__stat-header {
  background: transparent;
  padding: 10px 12px;
  font-weight: 600;
  font-size: 11px;
  color: var(--color-text-secondary);
  border-bottom: 1px solid var(--color-border-dark);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.system-hero__stat-content {
  display: flex;
  flex-direction: column;
  gap: 0;
  flex: 1;
}

.system-hero__stat-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 12px;
  background: rgba(0, 0, 0, 0.2);
  border-bottom: 1px solid var(--color-border-dark);
  transition: background-color 0.2s ease;
  gap: 12px;
}

.system-hero__stat-row:last-child {
  border-bottom: none;
}

.system-hero__stat-row:hover {
  background: rgba(74, 158, 255, 0.15);
}

.system-hero__stat-label {
  color: var(--color-text-secondary);
  font-size: 10px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.3px;
  white-space: nowrap;
}

.system-hero__stat-value {
  font-weight: 600;
  font-size: 11px;
  text-align: right;
}

.system-hero__link {
  color: var(--color-accent-blue-bright);
  text-decoration: none;
  transition: color var(--transition-normal);
}

.system-hero__link:hover {
  color: var(--color-accent-gold);
  text-decoration: underline;
}

.color-green {
  color: #4ade80;
}

@media (max-width: 768px) {
  .system-hero__content {
    flex-direction: column;
    gap: 16px;
  }

  .system-hero__image-section {
    margin: 0 auto;
  }

  .system-hero__info {
    grid-template-columns: 1fr;
  }

  .system-hero__stat-card--prominent {
    grid-column: 1;
  }
}
</style>
