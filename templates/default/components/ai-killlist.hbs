<div style="margin: 16px 0;">
  {{#if title}}
  <h3 style="color: #fff; margin-bottom: 12px; font-size: 18px;">{{title}}</h3>
  {{/if}}
  
  <div style="background: #1a1a1a; border-radius: 8px; overflow: hidden;">
    {{#each kills}}
    <div style="padding: 12px 16px; border-bottom: 1px solid #2a2a2a; display: flex; justify-content: space-between; align-items: center;">
      <div style="flex: 1;">
        <a href="/killmail/{{killmailId}}" style="color: #6eb5ff; text-decoration: none; font-weight: 500;">
          {{shipName}}
        </a>
        <div style="color: #888; font-size: 13px; margin-top: 4px;">
          {{systemName}} ({{formatSecurity systemSecurity}})
          â€¢ {{formatTimeAgo killmailTime}}
        </div>
      </div>
      <div style="text-align: right;">
        <div style="color: #ff6b6b; font-weight: 600;">
          {{formatISK totalValue}}
        </div>
      </div>
    </div>
    {{/each}}
    
    {{#unless kills}}
    <div style="padding: 24px; text-align: center; color: #666;">
      No killmails found
    </div>
    {{/unless}}
  </div>
</div>
