{{#if stats}}
<div class="top-10-container">
  {{#if stats.ships}}
    {{> partials/top-10-box title="Top Ships" items=stats.ships timeRange="Last 30 Days"}}
  {{/if}}

  {{#if stats.characters}}
    {{> partials/top-10-box title="Top Characters" items=stats.characters timeRange="Last 7 Days"}}
  {{/if}}

  {{#if stats.corporations}}
    {{> partials/top-10-box title="Top Corporations" items=stats.corporations timeRange="Last 7 Days"}}
  {{/if}}

  {{#if stats.alliances}}
    {{> partials/top-10-box title="Top Alliances" items=stats.alliances timeRange="Last 7 Days"}}
  {{/if}}

  {{#if stats.systems}}
    {{> partials/top-10-box title="Top Systems" items=stats.systems timeRange="Last 30 Days"}}
  {{/if}}

  {{#if stats.regions}}
    {{> partials/top-10-box title="Top Regions" items=stats.regions timeRange="Last 30 Days"}}
  {{/if}}
</div>

<style>
.top-10-container {
  display: flex;
  flex-direction: column;
  gap: 15px;
  width: 100%;
}

.top-10-box {
  background: var(--color-bg-tertiary);
  border: 1px solid var(--color-border-dark);
  border-radius: 4px;
  overflow: hidden;
}

.top-10-header {
  background: transparent;
  padding: 12px 16px;
  font-weight: 600;
  font-size: 12px;
  color: var(--color-text-white);
  border-bottom: 1px solid var(--color-border-dark);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.top-10-content {
  display: flex;
  flex-direction: column;
  gap: 0;
  width: 100%;
}

.top-10-row {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px 16px;
  border-bottom: 1px solid var(--color-border-dark);
  font-size: 10px;
  transition: background-color 0.2s ease;
  background: rgba(0, 0, 0, 0.2);
}

.top-10-row:last-child {
  border-bottom: none;
}

.top-10-row:hover {
  background: rgba(74, 158, 255, 0.15);
}

.top-10-img-wrapper {
  position: relative;
  flex-shrink: 0;
  width: 24px;
  height: 24px;
}

.top-10-img {
  width: 24px;
  height: 24px;
  border-radius: 2px;
  display: inline-block;
  flex-shrink: 0;
}

.top-10-img-rank {
  position: absolute;
  bottom: -4px;
  right: -4px;
  background: #4a9eff;
  color: #ffffff;
  width: 14px;
  height: 14px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 8px;
  border: 1px solid rgba(0, 0, 0, 0.3);
}

.top-10-name {
  flex: 1;
  min-width: 0;
  color: var(--color-text-white);
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.top-10-row:hover .top-10-name {
  color: #fff;
  text-decoration: underline;
}

.top-10-kills {
  color: #10b981;
  font-weight: bold;
  font-size: 10px;
  white-space: nowrap;
}

.top-10-footer {
  padding: 8px 0;
  border-top: 1px solid var(--color-border-dark);
  color: var(--color-text-secondary);
  font-size: 9px;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}
</style>
{{/if}}
