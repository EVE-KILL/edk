{{!--
  Top 10 Statistics Component
  Displays top 10 characters, corporations, alliances, systems, and regions

  Usage:
  {{> components/top-10-stats top10Stats=top10Stats}}

  Props:
  - top10Stats: object with arrays of characters, corporations, alliances, systems, regions
--}}
{{#if top10Stats}}
<div class="top-10-container">
  <!-- Characters Top 10 -->
  {{#if top10Stats.characters.length}}
  <div class="top-10-box">
    <div class="top-10-header">Top Characters</div>
    <div class="top-10-content">
      {{#each top10Stats.characters}}
      <div class="top-10-row" onclick="window.location.href='/character/{{this.id}}';" style="cursor: pointer;">
        {{#if this.imageUrl}}
        <div class="top-10-img-wrapper">
          <img src="{{this.imageUrl}}" alt="{{this.name}}" class="top-10-img" />
          <div class="top-10-img-rank">{{add @index 1}}</div>
        </div>
        {{else}}
        <div class="top-10-img-wrapper">
          <div style="width: 24px; height: 24px; background: #333; border-radius: 2px;"></div>
          <div class="top-10-img-rank">{{add @index 1}}</div>
        </div>
        {{/if}}
        <span class="top-10-name">{{this.name}}</span>
        <span class="top-10-kills">{{this.kills}}</span>
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}

  <!-- Corporations Top 10 -->
  {{#if top10Stats.corporations.length}}
  <div class="top-10-box">
    <div class="top-10-header">Top Corporations</div>
    <div class="top-10-content">
      {{#each top10Stats.corporations}}
      <div class="top-10-row" onclick="window.location.href='/corporation/{{this.id}}';" style="cursor: pointer;">
        {{#if this.imageUrl}}
        <div class="top-10-img-wrapper">
          <img src="{{this.imageUrl}}" alt="{{this.name}}" class="top-10-img" />
          <div class="top-10-img-rank">{{add @index 1}}</div>
        </div>
        {{else}}
        <div class="top-10-img-wrapper">
          <div style="width: 24px; height: 24px; background: #333; border-radius: 2px;"></div>
          <div class="top-10-img-rank">{{add @index 1}}</div>
        </div>
        {{/if}}
        <span class="top-10-name">{{this.name}}</span>
        <span class="top-10-kills">{{this.kills}}</span>
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}

  <!-- Alliances Top 10 -->
  {{#if top10Stats.alliances.length}}
  <div class="top-10-box">
    <div class="top-10-header">Top Alliances</div>
    <div class="top-10-content">
      {{#each top10Stats.alliances}}
      <div class="top-10-row" onclick="window.location.href='/alliance/{{this.id}}';" style="cursor: pointer;">
        {{#if this.imageUrl}}
        <div class="top-10-img-wrapper">
          <img src="{{this.imageUrl}}" alt="{{this.name}}" class="top-10-img" />
          <div class="top-10-img-rank">{{add @index 1}}</div>
        </div>
        {{else}}
        <div class="top-10-img-wrapper">
          <div style="width: 24px; height: 24px; background: #333; border-radius: 2px;"></div>
          <div class="top-10-img-rank">{{add @index 1}}</div>
        </div>
        {{/if}}
        <span class="top-10-name">{{this.name}}</span>
        <span class="top-10-kills">{{this.kills}}</span>
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}

  <!-- Systems Top 10 -->
  {{#if top10Stats.systems.length}}
  <div class="top-10-box">
    <div class="top-10-header">Top Systems</div>
    <div class="top-10-content">
      {{#each top10Stats.systems}}
      <div class="top-10-row" onclick="window.location.href='/system/{{this.id}}';" style="cursor: pointer;">
        <div class="top-10-img-wrapper">
          <img src="https://images.eve-kill.com/systems/{{this.id}}" alt="{{this.name}}" class="top-10-img" />
          <div class="top-10-img-rank">{{add @index 1}}</div>
        </div>
        <span class="top-10-name">{{this.name}}</span>
        <span class="top-10-kills">{{this.kills}}</span>
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}

  <!-- Regions Top 10 -->
  {{#if top10Stats.regions.length}}
  <div class="top-10-box">
    <div class="top-10-header">Top Regions</div>
    <div class="top-10-content">
      {{#each top10Stats.regions}}
      <div class="top-10-row" onclick="window.location.href='/region/{{this.id}}';" style="cursor: pointer;">
        <div class="top-10-img-wrapper">
          <img src="https://images.eve-kill.com/regions/{{this.id}}" alt="{{this.name}}" class="top-10-img" />
          <div class="top-10-img-rank">{{add @index 1}}</div>
        </div>
        <span class="top-10-name">{{this.name}}</span>
        <span class="top-10-kills">{{this.kills}}</span>
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}
</div>

<style>
.top-10-container {
  display: flex;
  flex-direction: column;
  gap: 15px;
  width: 100%;
}

.top-10-box {
  background: var(--color-bg-tertiary);
  border: 1px solid var(--color-border-dark);
  border-radius: 4px;
  overflow: hidden;
}

.top-10-header {
  background: transparent;
  padding: 12px 16px;
  font-weight: 600;
  font-size: 12px;
  color: var(--color-text-white);
  border-bottom: 1px solid var(--color-border-dark);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.top-10-content {
  display: flex;
  flex-direction: column;
  gap: 0;
  width: 100%;
}

.top-10-row {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px 16px;
  border-bottom: 1px solid var(--color-border-dark);
  font-size: 10px;
  transition: background-color 0.2s ease;
  background: rgba(0, 0, 0, 0.2);
}

.top-10-row:last-child {
  border-bottom: none;
}

.top-10-row:hover {
  background: rgba(74, 158, 255, 0.15);
}

.top-10-rank {
  color: var(--color-text-secondary);
  text-align: center;
  width: 20px;
  font-weight: 600;
  font-size: 9px;
  text-transform: uppercase;
  letter-spacing: 0.3px;
  display: none;
}

.top-10-img-wrapper {
  position: relative;
  flex-shrink: 0;
  width: 24px;
  height: 24px;
}

.top-10-img {
  width: 24px;
  height: 24px;
  border-radius: 2px;
  display: inline-block;
  flex-shrink: 0;
}

.top-10-img-rank {
  position: absolute;
  bottom: -4px;
  right: -4px;
  background: #4a9eff;
  color: #ffffff;
  width: 14px;
  height: 14px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 8px;
  border: 1px solid rgba(0, 0, 0, 0.3);
}

.top-10-name {
  flex: 1;
  min-width: 0;
  color: var(--color-text-white);
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.top-10-kills {
  color: var(--color-text-secondary);
  font-weight: 600;
  font-size: 9px;
  text-transform: uppercase;
  letter-spacing: 0.3px;
  flex-shrink: 0;
}

.top-10-name {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #ccc;
}

.top-10-row:hover .top-10-name {
  color: #fff;
  text-decoration: underline;
}

.top-10-kills {
  text-align: right;
  color: #10b981;
  font-weight: bold;
  width: 50px;
  padding-right: 4px;
  font-size: 10px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Responsive: stack on smaller screens */
@media (max-width: 1400px) {
  .top-10-container {
    width: 100%;
  }
}

@media (max-width: 768px) {
  .top-10-container {
    width: 100%;
  }
}
</style>
{{/if}}
