{{!--
  Entity Header Component
  Consolidates character/corporation/alliance header displays

  Usage:
  {{> components/entity-header
      entityId=entityId
      entityType=entityType
      name=name
      ticker=ticker
      parent=parentEntity
      stats=stats
  }}

  Props:
  - entityId: number (entity ID - preferred)
  - entityType: string (character|corporation|alliance - preferred)
  - imageUrl: string (entity image URL - legacy, use entityId + entityType instead)
  - entityImages: array (optional, for multi-entity collage)
  - name: string (entity name)
  - ticker: string (optional, entity ticker/tag)
  - type: string (character|corporation|alliance)
  - parent: object (optional, parent entity with id, name, ticker)
  - grandparent: object (optional, for character -> corp -> alliance)
  - stats: object (entity statistics)
--}}
<div class="entity-hero">
  <!-- Entity Name Header - Full Width with Logos -->
  <div class="entity-hero__header">
    <div class="entity-hero__title-section">
      <h1 class="entity-hero__title">
        {{name}}{{#if ticker}} <span class="entity-hero__ticker">[{{ticker}}]</span>{{/if}}
      </h1>

      {{#if entityList}}
      <div class="entity-hero__relations">
        <span class="color-secondary">Tracking:</span>
        {{#each entityList}}
          <a href="/{{this.type}}/{{this.id}}" class="entity-hero__link">{{this.name}}</a>{{#unless @last}},{{/unless}}
        {{/each}}
      </div>
      {{else}}
      {{#if parent}}
      <div class="entity-hero__relations">
        {{#ifEquals type "character"}}
          <a href="/corporation/{{parent.id}}" class="entity-hero__link">
            {{parent.name}}{{#if parent.ticker}} [{{parent.ticker}}]{{/if}}
          </a>
          {{#if grandparent}}
            <span class="entity-hero__relations-sep">â€¢</span>
            <a href="/alliance/{{grandparent.id}}" class="entity-hero__link">
              {{grandparent.name}}{{#if grandparent.ticker}} [{{grandparent.ticker}}]{{/if}}
            </a>
          {{/if}}
        {{else}}
          {{#if grandparent}}
            <a href="/alliance/{{grandparent.id}}" class="entity-hero__link">
              {{grandparent.name}}{{#if grandparent.ticker}} [{{grandparent.ticker}}]{{/if}}
            </a>
          {{/if}}
        {{/ifEquals}}
      </div>
      {{else if grandparent}}
      {{!-- Handle corporations in alliances (no parent, but has grandparent) --}}
      <div class="entity-hero__relations">
        <a href="/alliance/{{grandparent.id}}" class="entity-hero__link">
          {{grandparent.name}}{{#if grandparent.ticker}} [{{grandparent.ticker}}]{{/if}}
        </a>
      </div>
      {{/if}}
      {{/if}}
    </div>

    <!-- Parent/Grandparent Logos -->
    <div class="entity-hero__logos">
      {{#if parent}}
        {{#ifEquals type "character"}}
          <a href="/corporation/{{parent.id}}" class="entity-hero__logo-link" title="{{parent.name}}">
            {{> partials/eve-image type="corporation" id=parent.id size=64 alt=parent.name class="entity-hero__logo"}}
          </a>
          {{#if grandparent}}
            <a href="/alliance/{{grandparent.id}}" class="entity-hero__logo-link" title="{{grandparent.name}}">
              {{> partials/eve-image type="alliance" id=grandparent.id size=64 alt=grandparent.name class="entity-hero__logo"}}
            </a>
          {{/if}}
        {{else}}
          {{#if grandparent}}
            <a href="/alliance/{{grandparent.id}}" class="entity-hero__logo-link" title="{{grandparent.name}}">
              {{> partials/eve-image type="alliance" id=grandparent.id size=64 alt=grandparent.name class="entity-hero__logo"}}
            </a>
          {{/if}}
        {{/ifEquals}}
      {{else if grandparent}}
      {{!-- Handle corporations in alliances (no parent, but has grandparent) --}}
        <a href="/alliance/{{grandparent.id}}" class="entity-hero__logo-link" title="{{grandparent.name}}">
          {{> partials/eve-image type="alliance" id=grandparent.id size=64 alt=grandparent.name class="entity-hero__logo"}}
        </a>
      {{/if}}
    </div>
  </div>

  <!-- Image and Stats - Below Header -->
  <div class="entity-hero__content">
    <!-- Entity Image -->
    <div class="entity-hero__image-section">
      {{#if entityImages}}
      {{!-- Multi-entity collage (for entities page with multiple tracked entities) --}}
      <div class="entity-hero__collage">
        {{#each entityImages}}
        <img src="{{this}}" alt="Entity {{@index}}" class="entity-hero__collage-image" />
        {{/each}}
      </div>
      {{else}}
      {{!-- Single entity image with lazy loading --}}
      {{#if entityId}}
        {{!-- Use eve-image partial for proper lazy loading and sizing (512px for retina displays) --}}
        <div class="entity-hero__image-wrapper">
          {{> partials/eve-image type=entityType id=entityId size=256 alt=name lazy=false class="entity-hero__image"}}
        </div>
      {{else}}
        {{!-- Fallback for legacy imageUrl prop --}}
        <img src="{{imageUrl}}" alt="{{name}}" class="entity-hero__image" />
      {{/if}}
      {{/if}}
    </div>

    <!-- Stats Table -->
    {{#if stats}}
    <div class="entity-stats">
      <div class="entity-stats__header">Statistics</div>
      <div class="entity-stats__content">
        <div class="entity-stats__row">
          <span class="entity-stats__label">Kills:</span>
          <span class="entity-stats__value color-green">{{stats.kills}}</span>
        </div>
        <div class="entity-stats__row">
          <span class="entity-stats__label">Losses:</span>
          <span class="entity-stats__value color-red">{{stats.losses}}</span>
        </div>
        <div class="entity-stats__row">
          <span class="entity-stats__label">Kill/Loss Ratio:</span>
          <span class="entity-stats__value color-gold">{{formatNumber stats.killLossRatio}}</span>
        </div>
        <div class="entity-stats__row">
          <span class="entity-stats__label">Efficiency:</span>
          <span class="entity-stats__value color-gold">{{formatNumber stats.efficiency}}%</span>
        </div>
        <div class="entity-stats__row">
          <span class="entity-stats__label">ISK Destroyed:</span>
          <span class="entity-stats__value color-green">{{formatISK stats.iskDestroyed}}</span>
        </div>
        <div class="entity-stats__row">
          <span class="entity-stats__label">ISK Lost:</span>
          <span class="entity-stats__value color-red">{{formatISK stats.iskLost}}</span>
        </div>
        <div class="entity-stats__row">
          <span class="entity-stats__label">ISK Efficiency:</span>
          <span class="entity-stats__value color-gold">{{formatNumber stats.iskEfficiency}}%</span>
        </div>
      </div>
    </div>
    {{/if}}
  </div>
</div>

<style>
.entity-hero {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: var(--spacing-lg);
}

.entity-hero__header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 12px 16px;
  background: linear-gradient(135deg, var(--color-bg-dark) 0%, var(--color-bg-secondary) 100%);
  border-radius: 4px;
  border-left: 4px solid var(--color-accent-blue-bright);
  gap: 16px;
}

.entity-hero__title-section {
  flex: 1;
  min-width: 0;
}

.entity-hero__title {
  margin: 0 0 4px 0;
  font-size: 22px;
  color: var(--color-accent-blue-bright);
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  word-break: break-word;
}

.entity-hero__ticker {
  color: var(--color-text-secondary);
  font-size: 18px;
}

.entity-hero__relations {
  font-size: 12px;
  color: var(--color-text-light);
  margin-top: 0;
}

.entity-hero__relations-sep {
  margin: 0 6px;
  color: var(--color-text-secondary);
}

.entity-hero__link {
  color: var(--color-accent-blue-bright);
  text-decoration: none;
  transition: color var(--transition-normal);
}

.entity-hero__link:hover {
  color: var(--color-accent-gold);
  text-decoration: underline;
}

.entity-hero__logos {
  display: flex;
  gap: 8px;
  flex-shrink: 0;
  align-items: flex-start;
}

.entity-hero__logo-link {
  display: block;
  width: 64px;
  height: 64px;
  border-radius: 2px;
  overflow: hidden;
  flex-shrink: 0;
  transition: transform 0.2s ease;
}

.entity-hero__logo-link:hover {
  transform: scale(1.05);
}

.entity-hero__logo {
  width: 100%;
  height: 100%;
  display: block;
}

.entity-hero__content {
  display: grid;
  grid-template-columns: 256px 1fr;
  gap: 12px;
}

.entity-hero__image-section {
  display: flex;
  justify-content: flex-start;
}

.entity-hero__image-wrapper {
  width: 256px;
  height: 256px;
}

.entity-hero__image {
  width: 100%;
  height: 100%;
  border-radius: 4px;
  display: block;
}

.entity-hero__collage {
  flex-shrink: 0;
  width: 256px;
  height: 256px;
  display: grid;
  gap: 4px;
  border-radius: 4px;
  overflow: hidden;
}

.entity-hero__collage:has(.entity-hero__collage-image:nth-child(1):last-child) {
  grid-template-columns: 1fr;
  grid-template-rows: 1fr;
}

.entity-hero__collage:has(.entity-hero__collage-image:nth-child(2):last-child) {
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr;
}

.entity-hero__collage:has(.entity-hero__collage-image:nth-child(3):last-child) {
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
}

.entity-hero__collage:has(.entity-hero__collage-image:nth-child(3):last-child) .entity-hero__collage-image:first-child {
  grid-row: 1 / 3;
}

.entity-hero__collage:has(.entity-hero__collage-image:nth-child(4)) {
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
}

.entity-hero__collage-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.entity-hero__collage-image:nth-child(n+5) {
  display: none;
}

.entity-stats {
  background: var(--color-bg-tertiary);
  border: 1px solid var(--color-border-dark);
  border-radius: 4px;
  overflow: hidden;
}

.entity-stats__header {
  background: transparent;
  padding: 12px 16px;
  font-weight: 600;
  font-size: 11px;
  color: var(--color-text-secondary);
  border-bottom: 1px solid var(--color-border-dark);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.entity-stats__content {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.entity-stats__row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 16px;
  background: rgba(0, 0, 0, 0.2);
  border-bottom: 1px solid var(--color-border-dark);
  transition: background-color 0.2s ease;
  gap: 12px;
}

.entity-stats__row:last-child {
  border-bottom: none;
}

.entity-stats__row:hover {
  background: rgba(74, 158, 255, 0.15);
}

.entity-stats__label {
  color: var(--color-text-secondary);
  font-size: 10px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.3px;
  white-space: nowrap;
}

.entity-stats__value {
  font-weight: 700;
  font-size: 11px;
  text-align: right;
}

.color-green {
  color: #4ade80;
}

.color-red {
  color: #ef4444;
}

.color-gold {
  color: #fbbf24;
}

@media (max-width: 768px) {
  .entity-hero__content {
    grid-template-columns: 1fr;
  }

  .entity-hero__header {
    flex-direction: column;
    align-items: center;
  }

  .entity-hero__title-section {
    text-align: center;
  }

  .entity-hero__logos {
    width: 100%;
    justify-content: center;
  }
}
</style>
