{{!--
  Entity Header Component
  Consolidates character/corporation/alliance header displays

  Usage:
  {{> components/entity-header
      entityId=entityId
      entityType=entityType
      name=name
      ticker=ticker
      parent=parentEntity
      stats=stats
  }}

  Props:
  - entityId: number (entity ID - preferred)
  - entityType: string (character|corporation|alliance - preferred)
  - imageUrl: string (entity image URL - legacy, use entityId + entityType instead)
  - entityImages: array (optional, for multi-entity collage)
  - name: string (entity name)
  - ticker: string (optional, entity ticker/tag)
  - type: string (character|corporation|alliance)
  - parent: object (optional, parent entity with id, name, ticker)
  - grandparent: object (optional, for character -> corp -> alliance)
  - stats: object (entity statistics)
--}}
<div class="entity-hero">
  <!-- Single container box for entire entity header -->
  <div class="entity-hero__container">
    <!-- Bottom: Big entity image on left, stats taking up rest of width on right -->
    <div class="entity-hero__content">
      <!-- Entity Image -->
      <div class="entity-hero__image-section">
        {{#if entityImages}}
        {{!-- Multi-entity collage (for entities page with multiple tracked entities) --}}
        <div class="entity-hero__collage">
          {{#each entityImages}}
          <img src="{{this}}" alt="Entity {{@index}}" class="entity-hero__collage-image" />
          {{/each}}
        </div>
        {{else}}
        {{!-- Single entity image with lazy loading --}}
        {{#if entityId}}
          {{!-- Use eve-image partial for proper lazy loading and sizing (512px for retina displays) --}}
          <div class="entity-hero__image-wrapper">
            {{> partials/eve-image type=entityType id=entityId size=256 alt=name lazy=false class="entity-hero__image"}}
          </div>
        {{else}}
          {{!-- Fallback for legacy imageUrl prop --}}
          <img src="{{imageUrl}}" alt="{{name}}" class="entity-hero__image" />
        {{/if}}
        {{/if}}
      </div>

      <!-- Stats Table -->
      {{#if stats}}
      <div class="entity-stats">
        <div class="entity-stats__header">Statistics</div>
        <div class="entity-stats__content">
          <div class="entity-stats__row">
            <span class="entity-stats__label">Kills:</span>
            <span class="entity-stats__value color-green">
              {{stats.kills}}
              {{#if stats.kills30d}}
                <span class="entity-stats__subtext">(30d: {{stats.kills30d}}, 14d: {{stats.kills14d}})</span>
              {{/if}}
            </span>
          </div>
          <div class="entity-stats__row">
            <span class="entity-stats__label">Losses:</span>
            <span class="entity-stats__value color-red">
              {{stats.losses}}
              {{#if stats.losses30d}}
                <span class="entity-stats__subtext">(30d: {{stats.losses30d}}, 14d: {{stats.losses14d}})</span>
              {{/if}}
            </span>
          </div>
          <div class="entity-stats__row">
            <span class="entity-stats__label">Kill/Loss Ratio:</span>
            <span class="entity-stats__value color-gold">
              {{formatNumber stats.killLossRatio}}
              {{#if stats.killLossRatio30d}}
                <span class="entity-stats__subtext">(30d: {{formatNumber stats.killLossRatio30d}}, 14d: {{formatNumber stats.killLossRatio7d}})</span>
              {{/if}}
            </span>
          </div>
          <div class="entity-stats__row">
            <span class="entity-stats__label">Efficiency:</span>
            <span class="entity-stats__value color-gold">{{formatNumber stats.efficiency}}%</span>
          </div>
          <div class="entity-stats__row">
            <span class="entity-stats__label">ISK Destroyed:</span>
            <span class="entity-stats__value color-green">{{formatISK stats.iskDestroyed}}</span>
          </div>
          <div class="entity-stats__row">
            <span class="entity-stats__label">ISK Lost:</span>
            <span class="entity-stats__value color-red">{{formatISK stats.iskLost}}</span>
          </div>
          <div class="entity-stats__row">
            <span class="entity-stats__label">ISK Efficiency:</span>
            <span class="entity-stats__value color-gold">{{formatNumber stats.iskEfficiency}}%</span>
          </div>
        </div>
      </div>
      {{/if}}
    </div>
  </div>
</div>

<style>
