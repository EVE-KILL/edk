                            <div class="avatar-trigger">
                                <img src="{{config.imageServerUrl}}/characters/0/portrait?size=64" alt="Login placeholder portrait" loading="lazy" />
                            </div>
                            <div class="user-dropdown">
                                <div class="user-header">
                                    <img src="{{config.imageServerUrl}}/characters/0/portrait?size=128" alt="Login placeholder portrait" loading="lazy" />
                                    <div class="user-meta">
                                        <div class="name">Login</div>
                                        <div class="line">Choose how you want to log in</div>
                                    </div>
                                </div>
                                <div class="user-actions">
                                    <a data-auth-login href="/login?killmailAccess=1">With killmail access</a>
                                    <a data-auth-login href="/login?killmailAccess=0">Without killmail access</a>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </nav>

        <!-- Main Content Area -->
        <main>
            {{{body}}}
        </main>

        <!-- Footer -->
        <footer>
            <p>
                Powered by <strong>EDK</strong>
                {{#if config.copyright}}{{config.copyright}}{{else}}&copy; 2025{{/if}}
            </p>
            {{#if config.showVersion}}
            <p style="color: var(--color-text-tertiary); margin: 5px 0 0 0; font-size: 9px;">
                Version {{version}} | Build {{buildDate}}
            </p>
            {{/if}}
            {{#if performance}}
            <p style="color: #555; margin: 5px 0 0 0; font-size: 9px;">
                Page loaded in {{performance.totalTime}}ms
                {{#if performance.queryCount}}
                | {{performance.queryCount}} {{#ifEquals performance.queryCount 1}}query{{else}}queries{{/ifEquals}} ({{performance.dbTime}}ms avg)
                {{/if}}
                {{#if performance.templateTime}}
                | Template: {{performance.templateTime}}ms
                {{/if}}
                {{#if performance.layoutRenderTime}}
                | Layout: {{performance.layoutRenderTime}}ms
                {{/if}}
            </p>
            {{/if}}
        </footer>
    </div>

    {{#if debug}}
    {{> partials/debug-bar}}
    {{/if}}

    <!-- Scripts -->
    <script type="text/javascript">
        // Toggle popup display
        function ReverseContentDisplay(id) {
            var element = document.getElementById(id);
            if (element.style.display === 'none' || element.style.display === '') {
                element.style.display = 'block';
            } else {
                element.style.display = 'none';
            }
        }

        // Clickable table rows
        document.addEventListener('DOMContentLoaded', function() {
            var clickableRows = document.querySelectorAll('tr[onclick]');
            clickableRows.forEach(function(row) {
                row.style.cursor = 'pointer';
            });
        });
    </script>

    {{#if additionalJS}}
    {{#each additionalJS}}
    <script type="text/javascript" src="{{this}}"></script>
    {{/each}}
    {{/if}}

    <script>
      window.__EDK_IMAGE_URL = '{{config.imageServerUrl}}';
      (function setWsUrl() {
        const wsFromEnv = '{{env.WS_URL}}';
        if (wsFromEnv && wsFromEnv !== 'undefined' && wsFromEnv !== 'null') {
          const trimmed = wsFromEnv.endsWith('/ws') ? wsFromEnv : `${wsFromEnv}/ws`;
          window.__EDK_WS_URL = trimmed;
        }
      })();
    </script>
    <script type="text/javascript" src="/ws-ident.js"></script>
    <script type="text/javascript" src="/site-ws.js"></script>
    <script type="text/javascript" src="/auth-nav.js"></script>
    <script type="text/javascript" src="/auth-state.js"></script>
    <script type="text/javascript" src="/auth-ws.js"></script>

    <!-- Fitting Wheel Script -->
    <script type="text/javascript" src="/fitting-wheel.js"></script>

    <!-- Items Sorting Script -->
    <script type="text/javascript" src="/items-sorting.js"></script>

    <!-- Search Script -->
    <script type="text/javascript" src="/search.js"></script>

    <!-- Dropdown Positioning Script -->
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function() {
            // Dynamically position dropdowns based on screen position
            const dropdowns = document.querySelectorAll('.nav-dropdown');
            
            dropdowns.forEach(function(dropdown) {
                const content = dropdown.querySelector('.nav-dropdown-content');
                if (!content) return;
                
                dropdown.addEventListener('mouseenter', function() {
                    const rect = dropdown.getBoundingClientRect();
                    const screenWidth = window.innerWidth;
                    const midpoint = screenWidth / 2;
                    
                    // If dropdown is in right half of screen, align to right
                    if (rect.left > midpoint) {
                        content.classList.add('align-right');
                    } else {
                        content.classList.remove('align-right');
                    }
                });
            });
        });
    </script>

    {{{footerContent}}}
</body>
</html>
