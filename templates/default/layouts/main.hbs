                                {{/each}}
                                {{/if}}
                                {{#if followedEntities.corporationDetails.length}}
                                <div class="dropdown-section-header">Corporations</div>
                                {{#each followedEntities.corporationDetails}}
                                <a href="/corporation/{{this.id}}">{{this.name}} [{{this.ticker}}]</a>
                                {{/each}}
                                {{/if}}
                                {{#if followedEntities.allianceDetails.length}}
                                <div class="dropdown-section-header">Alliances</div>
                                {{#each followedEntities.allianceDetails}}
                                <a href="/alliance/{{this.id}}">{{this.name}} &lt;{{this.ticker}}&gt;</a>
                                {{/each}}
                                {{/if}}
                            </div>
                        </div>
                    </td>
                    {{/if}}
                    <td><a href="/post">Post</a></td>
                    <td class="nav-search">
                        <div class="search-container">
                            <input
                                type="text"
                                id="globalSearch"
                                placeholder="Search..."
                                autocomplete="off"
                            />
                            <div id="searchResults" class="search-results"></div>
                        </div>
                    </td>
                    <td class="nav-dropdown nav-help">
                        <div class="nav-dropdown-wrapper">
                            <a href="#">?</a>
                            <div class="nav-dropdown-content">
                                <a href="/docs">Docs</a>
                                <a href="/about">About</a>
                                <a href="/status">Status</a>
                            </div>
                        </div>
                    </td>
                    <td class="nav-user">
                        <div class="auth-block auth-logged-in" data-auth-section="in" style="display:none;">
                            <div class="avatar-trigger">
                                <img data-auth-avatar src="{{config.imageServerUrl}}/characters/0/portrait?size=64" alt="User portrait" loading="lazy" />
                            </div>
                            <div class="user-dropdown">
                                <div class="user-header">
                                    <img data-auth-avatar-large src="{{config.imageServerUrl}}/characters/0/portrait?size=128" alt="User portrait" loading="lazy" />
