<div class="box">
    <div class="box-header">Statistics</div>
    <div class="box-content">
        {{#if followedEntities.hasEntities}}
            <p>Select an entity to view statistics:</p>

            {{#if followedEntities.characters.length}}
            <div style="margin: 20px 0;">
                <h3 style="color: #8ab4f8; margin-bottom: 10px;">Characters</h3>
                <select
                    id="characterSelect"
                    onchange="if(this.value) window.location.href='/character/' + this.value"
                    style="width: 100%; padding: 10px; font-size: 14px; border: 1px solid #374957; background: #0a1929; color: #aaa;"
                >
                    <option value="">-- Select a character --</option>
                    {{#each followedEntities.characters}}
                    <option value="{{this}}">Character ID: {{this}}</option>
                    {{/each}}
                </select>
            </div>
            {{/if}}

            {{#if followedEntities.corporations.length}}
            <div style="margin: 20px 0;">
                <h3 style="color: #8ab4f8; margin-bottom: 10px;">Corporations</h3>
                <select
                    id="corporationSelect"
                    onchange="if(this.value) window.location.href='/corporation/' + this.value"
                    style="width: 100%; padding: 10px; font-size: 14px; border: 1px solid #374957; background: #0a1929; color: #aaa;"
                >
                    <option value="">-- Select a corporation --</option>
                    {{#each followedEntities.corporations}}
                    <option value="{{this}}">Corporation ID: {{this}}</option>
                    {{/each}}
                </select>
            </div>
            {{/if}}

            {{#if followedEntities.alliances.length}}
            <div style="margin: 20px 0;">
                <h3 style="color: #8ab4f8; margin-bottom: 10px;">Alliances</h3>
                <select
                    id="allianceSelect"
                    onchange="if(this.value) window.location.href='/alliance/' + this.value"
                    style="width: 100%; padding: 10px; font-size: 14px; border: 1px solid #374957; background: #0a1929; color: #aaa;"
                >
                    <option value="">-- Select an alliance --</option>
                    {{#each followedEntities.alliances}}
                    <option value="{{this}}">Alliance ID: {{this}}</option>
                    {{/each}}
                </select>
            </div>
            {{/if}}
        {{else}}
            <p>No entities configured.</p>
            <p style="margin-top: 15px; color: #666;">
                Configure followed entities by setting the following environment variables:
            </p>
            <ul style="margin-top: 10px; color: #666;">
                <li>FOLLOWED_CHARACTER_IDS (comma-separated character IDs)</li>
                <li>FOLLOWED_CORPORATION_IDS (comma-separated corporation IDs)</li>
                <li>FOLLOWED_ALLIANCE_IDS (comma-separated alliance IDs)</li>
            </ul>
        {{/if}}
    </div>
</div>
