  .wars-hero__header {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .wars-hero__stats {
    width: 100%;
    justify-content: space-between;
  }
  
  .war-card__fight {
    flex-direction: column;
    gap: 16px;
    padding: 20px 12px;
  }
  
