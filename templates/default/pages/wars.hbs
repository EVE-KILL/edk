<!-- Wars Page - EDK Style -->

{{> components/page-header
  title="Wars"
  breadcrumbs=pageHeader.breadcrumbs
  meta=pageHeader.meta
}}

<!-- Legendary Faction Wars -->
{{#if legendaryWars.length}}
<div style="margin-bottom: 20px;">
  <div style="padding: 8px 0 12px 0;">
    <div style="color: #fbbf24; font-weight: 700; font-size: 11px; text-transform: uppercase; letter-spacing: 1px; text-shadow: 0 0 8px rgba(251, 191, 36, 0.4);">
      ⚔️ Legendary Faction Conflicts
    </div>
  </div>
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(380px, 1fr)); gap: 16px;">
    {{#each legendaryWars}}
    <div class="war-card legendary-war-card" onclick="window.location.href='/wars/{{warId}}';" style="cursor: pointer;">
      <div class="war-card__header">
        <div class="war-card__header-content">
          <div class="war-card__badges">
            <span class="war-card__badge" style="background: rgba(251, 191, 36, 0.2); color: #fbbf24; border: 1px solid rgba(251, 191, 36, 0.3);">Legendary</span>
            <span class="war-card__badge war-card__badge--active">Active</span>
            <span class="war-card__badge war-card__badge--mutual">Mutual</span>
          </div>
        </div>
        <div class="war-card__date">{{yearsOfConflict}}+ Years</div>
      </div>

      <!-- Fight Card Style -->
      <div class="war-card__fight">
        <!-- Aggressor Side -->
        <div class="war-card__fighter war-card__fighter--left">
          <div class="war-card__fighter-header">
            <div class="war-card__fighter-image">
              {{#if aggressorAllianceId}}
                {{> partials/eve-image type="corporation" id=aggressorAllianceId size=48 class="war-card__avatar"}}
              {{else if aggressorCorporationId}}
                {{> partials/eve-image type="corporation" id=aggressorCorporationId size=48 class="war-card__avatar"}}
              {{/if}}
            </div>
            <div class="war-card__fighter-info">
              <div class="war-card__fighter-name">
                {{#if aggressorAllianceName}}{{aggressorAllianceName}}{{else if aggressorCorporationName}}{{aggressorCorporationName}}{{else}}Unknown{{/if}}
              </div>
              <div class="war-card__fighter-label">Aggressor</div>
            </div>
          </div>
          <div class="war-card__fighter-stats">
            <div class="war-card__fighter-stat">
              <div class="war-card__fighter-stat-value">{{aggressorShipsKilled}}</div>
              <div class="war-card__fighter-stat-label">Ships</div>
            </div>
            <div class="war-card__fighter-stat">
              <div class="war-card__fighter-stat-value color-green">{{abbreviateISK aggressorIskDestroyed}}</div>
              <div class="war-card__fighter-stat-label">ISK</div>
            </div>
          </div>
        </div>

        <!-- VS Badge -->
        <div class="war-card__vs">
          <div class="war-card__vs-text">VS</div>
        </div>

        <!-- Defender Side -->
        <div class="war-card__fighter war-card__fighter--right">
          <div class="war-card__fighter-header">
            <div class="war-card__fighter-image">
              {{#if defenderAllianceId}}
                {{> partials/eve-image type="corporation" id=defenderAllianceId size=48 class="war-card__avatar"}}
              {{else if defenderCorporationId}}
                {{> partials/eve-image type="corporation" id=defenderCorporationId size=48 class="war-card__avatar"}}
              {{/if}}
            </div>
            <div class="war-card__fighter-info">
              <div class="war-card__fighter-name">
                {{#if defenderAllianceName}}{{defenderAllianceName}}{{else if defenderCorporationName}}{{defenderCorporationName}}{{else}}Unknown{{/if}}
              </div>
              <div class="war-card__fighter-label">Defender</div>
            </div>
          </div>
          <div class="war-card__fighter-stats">
            <div class="war-card__fighter-stat">
              <div class="war-card__fighter-stat-value">{{defenderShipsKilled}}</div>
              <div class="war-card__fighter-stat-label">Ships</div>
            </div>
            <div class="war-card__fighter-stat">
              <div class="war-card__fighter-stat-value color-green">{{abbreviateISK defenderIskDestroyed}}</div>
              <div class="war-card__fighter-stat-label">ISK</div>
            </div>
          </div>
        </div>
      </div>

      {{#if lastKill}}
      <div class="war-card__footer">
        <div class="war-card__last-kill">Last kill {{lastKill}}</div>
      </div>
      {{/if}}
    </div>
    {{/each}}
  </div>
</div>
{{/if}}

<!-- War Filters -->
{{> partials/war-filters pagination=pagination filterDefaults=filterDefaults}}

<!-- Featured Faction Conflicts -->
{{#if highlightWars.length}}
<div style="background: var(--color-bg-tertiary); border: 1px solid var(--color-border-dark); border-radius: var(--radius-sm); margin-bottom: 20px; overflow: hidden;">
  <div style="padding: 12px 16px; border-bottom: 1px solid var(--color-border-dark);">
    <div style="color: var(--color-text-white); font-weight: 600; font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px;">
      Featured Faction Conflicts
    </div>
  </div>
  <div style="padding: 12px; display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 10px;">
    {{#each highlightWars}}
    <a href="/wars/{{warId}}" style="display: block; background: rgba(0, 0, 0, 0.2); border: 1px solid var(--color-border-dark); border-radius: var(--radius-sm); padding: 12px; text-decoration: none; transition: all 0.2s ease;" onmouseover="this.style.borderColor='var(--color-accent-blue)'; this.style.background='rgba(155, 179, 232, 0.1)'" onmouseout="this.style.borderColor='var(--color-border-dark)'; this.style.background='rgba(0, 0, 0, 0.2)'">
      <div style="font-size: 10px; text-transform: uppercase; color: var(--color-text-secondary); letter-spacing: 0.5px; margin-bottom: 6px;">War #{{warId}}</div>
      <div style="font-size: 12px; color: var(--color-text-white); font-weight: 600; line-height: 1.4;">
        {{#if aggressorAllianceName}}{{aggressorAllianceName}}{{else if aggressorCorporationName}}{{aggressorCorporationName}}{{else}}Aggressor{{/if}}
        <span style="color: var(--color-text-secondary); font-weight: 400;"> vs </span>
        {{#if defenderAllianceName}}{{defenderAllianceName}}{{else if defenderCorporationName}}{{defenderCorporationName}}{{else}}Defender{{/if}}
      </div>
    </a>
    {{/each}}
  </div>
</div>
{{/if}}

<!-- Wars List -->
<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(380px, 1fr)); gap: 16px;">
  {{#each wars}}
  <div class="war-card" onclick="window.location.href='/wars/{{warId}}';" style="cursor: pointer;">
    <div class="war-card__header">
      <div class="war-card__header-content">
        <div class="war-card__title">War #{{warId}}</div>
        <div class="war-card__badges">
          {{#unless finished}}<span class="war-card__badge war-card__badge--active">Active</span>{{/unless}}
          {{#if finished}}<span class="war-card__badge war-card__badge--finished">Finished</span>{{/if}}
          {{#if mutual}}<span class="war-card__badge war-card__badge--mutual">Mutual</span>{{/if}}
          {{#if openForAllies}}<span class="war-card__badge war-card__badge--allies">Allies</span>{{/if}}
        </div>
      </div>
      {{#if declared}}
      <div class="war-card__date">{{declared}}</div>
      {{/if}}
    </div>

    <!-- Fight Card Style -->
    <div class="war-card__fight">
      <!-- Aggressor Side -->
      <div class="war-card__fighter war-card__fighter--left">
        <div class="war-card__fighter-header">
          <div class="war-card__fighter-image">
            {{#if aggressorAllianceId}}
              {{> partials/eve-image type="alliance" id=aggressorAllianceId size=48 class="war-card__avatar"}}
            {{else if aggressorCorporationId}}
              {{> partials/eve-image type="corporation" id=aggressorCorporationId size=48 class="war-card__avatar"}}
            {{/if}}
          </div>
          <div class="war-card__fighter-info">
            <div class="war-card__fighter-name">
              {{#if aggressorAllianceName}}{{aggressorAllianceName}}{{else if aggressorCorporationName}}{{aggressorCorporationName}}{{else}}Unknown{{/if}}
            </div>
            <div class="war-card__fighter-label">Aggressor</div>
          </div>
        </div>
        <div class="war-card__fighter-stats">
          <div class="war-card__fighter-stat">
            <div class="war-card__fighter-stat-value">{{aggressorShipsKilled}}</div>
            <div class="war-card__fighter-stat-label">Ships</div>
          </div>
          <div class="war-card__fighter-stat">
            <div class="war-card__fighter-stat-value color-green">{{abbreviateISK aggressorIskDestroyed}}</div>
            <div class="war-card__fighter-stat-label">ISK</div>
          </div>
        </div>
      </div>

      <!-- VS Badge -->
      <div class="war-card__vs">
        <div class="war-card__vs-text">VS</div>
      </div>

      <!-- Defender Side -->
      <div class="war-card__fighter war-card__fighter--right">
        <div class="war-card__fighter-header">
          <div class="war-card__fighter-image">
            {{#if defenderAllianceId}}
              {{> partials/eve-image type="alliance" id=defenderAllianceId size=48 class="war-card__avatar"}}
            {{else if defenderCorporationId}}
              {{> partials/eve-image type="corporation" id=defenderCorporationId size=48 class="war-card__avatar"}}
            {{/if}}
          </div>
          <div class="war-card__fighter-info">
            <div class="war-card__fighter-name">
              {{#if defenderAllianceName}}{{defenderAllianceName}}{{else if defenderCorporationName}}{{defenderCorporationName}}{{else}}Unknown{{/if}}
            </div>
            <div class="war-card__fighter-label">Defender</div>
          </div>
        </div>
        <div class="war-card__fighter-stats">
          <div class="war-card__fighter-stat">
            <div class="war-card__fighter-stat-value">{{defenderShipsKilled}}</div>
            <div class="war-card__fighter-stat-label">Ships</div>
          </div>
          <div class="war-card__fighter-stat">
            <div class="war-card__fighter-stat-value color-green">{{abbreviateISK defenderIskDestroyed}}</div>
            <div class="war-card__fighter-stat-label">ISK</div>
          </div>
        </div>
      </div>
    </div>

    {{#if lastKill}}
    <div class="war-card__footer">
      <div class="war-card__last-kill">Last kill {{lastKill}}</div>
    </div>
    {{/if}}
  </div>
  {{/each}}
</div>

<style>
.war-card {
  background: var(--color-bg-tertiary);
  border: 1px solid var(--color-border-dark);
  border-radius: var(--radius-sm);
  overflow: hidden;
  transition: all 0.2s ease;
}

.war-card:hover {
  border-color: var(--color-accent-blue);
  box-shadow: 0 4px 12px rgba(74, 158, 255, 0.3);
  transform: translateY(-2px);
}

.war-card__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12px;
  padding: 10px 16px;
  border-bottom: 1px solid var(--color-border-dark);
  background: rgba(0, 0, 0, 0.3);
}

.war-card__header-content {
  display: flex;
  align-items: center;
  gap: 10px;
}

.war-card__title {
  font-size: 13px;
  font-weight: 700;
  color: var(--color-accent-blue);
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
}

.war-card__badges {
  display: flex;
  gap: 6px;
  flex-wrap: wrap;
}

.war-card__badge {
  font-size: 9px;
  text-transform: uppercase;
  letter-spacing: 0.3px;
  padding: 2px 6px;
  border-radius: 3px;
  font-weight: 600;
}

.war-card__badge--active {
  background: rgba(74, 222, 128, 0.2);
  color: #4ade80;
  border: 1px solid rgba(74, 222, 128, 0.3);
}

.war-card__badge--finished {
  background: rgba(156, 163, 175, 0.2);
  color: #9ca3af;
  border: 1px solid rgba(156, 163, 175, 0.3);
}

.war-card__badge--mutual {
  background: rgba(251, 191, 36, 0.2);
  color: #fbbf24;
  border: 1px solid rgba(251, 191, 36, 0.3);
}

.war-card__badge--allies {
  background: rgba(74, 158, 255, 0.2);
  color: var(--color-accent-blue);
  border: 1px solid rgba(74, 158, 255, 0.3);
}

.war-card__date {
  font-size: 10px;
  color: var(--color-text-secondary);
  white-space: nowrap;
  font-style: italic;
}

/* Fight Card Style */
.war-card__fight {
  display: flex;
  align-items: stretch;
  justify-content: center;
  padding: 20px 12px;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.4));
  position: relative;
  gap: 8px;
  min-height: 140px;
}

.war-card__fighter {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10px;
  max-width: 48%;
  min-height: 120px;
}

.war-card__fighter--left {
  align-items: flex-end;
  justify-content: flex-start;
}

.war-card__fighter--right {
  align-items: flex-start;
  justify-content: flex-start;
}

.war-card__fighter-header {
  display: flex;
  gap: 10px;
  align-items: center;
}

.war-card__fighter--left .war-card__fighter-header {
  flex-direction: row-reverse;
}

.war-card__fighter-image {
  flex-shrink: 0;
}

.war-card__avatar {
  border-radius: 4px;
}

.war-card__fighter-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
  flex: 1;
  min-width: 0;
}

.war-card__fighter--left .war-card__fighter-info {
  align-items: flex-end;
  text-align: right;
}

.war-card__fighter--right .war-card__fighter-info {
  align-items: flex-start;
  text-align: left;
}

.war-card__fighter-name {
  font-size: 14px;
  font-weight: 700;
  color: var(--color-text-white);
  line-height: 1.3;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
  word-wrap: break-word;
  word-break: break-word;
  font-family: 'Orbitron', 'Rajdhani', 'Russo One', 'Impact', sans-serif;
  letter-spacing: 0.5px;
}

.war-card__fighter-label {
  font-size: 9px;
  text-transform: uppercase;
  letter-spacing: 0.8px;
  color: var(--color-text-secondary);
  font-weight: 600;
  opacity: 0.7;
}

.war-card__fighter-stats {
  display: flex;
  gap: 12px;
  margin-top: auto;
  padding-top: 8px;
}

.war-card__fighter-stat {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.war-card__fighter-stat-value {
  font-size: 16px;
  font-weight: 700;
  color: var(--color-text-white);
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.8);
}

.war-card__fighter-stat-label {
  font-size: 9px;
  text-transform: uppercase;
  letter-spacing: 0.3px;
  color: var(--color-text-secondary);
  opacity: 0.8;
}

/* VS Badge */
.war-card__vs {
  position: relative;
  flex-shrink: 0;
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  align-self: center;
  margin: 0 8px;
}

.war-card__vs::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(74, 158, 255, 0.2), rgba(139, 92, 246, 0.2));
  border: 1px solid rgba(255, 255, 255, 0.15);
  border-radius: 50%;
  box-shadow: 0 2px 8px rgba(74, 158, 255, 0.2), inset 0 0 10px rgba(0, 0, 0, 0.3);
}

.war-card__vs-text {
  position: relative;
  font-size: 16px;
  font-weight: 800;
  color: #fff;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.7);
  letter-spacing: 1px;
  font-family: 'Rajdhani', 'Impact', sans-serif;
}

.war-card__footer {
  padding: 10px 16px;
  border-top: 1px solid var(--color-border-dark);
  background: rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
}

.war-card__last-kill {
  font-size: 10px;
  color: var(--color-text-secondary);
  font-style: italic;
}

.color-green {
  color: #4ade80;
}

.color-gold {
  color: #fbbf24;
}

/* Legendary War Card Enhancement */
.legendary-war-card {
  position: relative;
}

.legendary-war-card::before {
  content: '';
  position: absolute;
  inset: -1px;
  background: linear-gradient(135deg, rgba(251, 191, 36, 0.3), rgba(245, 158, 11, 0.2));
  border-radius: var(--radius-sm);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
  z-index: -1;
}

.legendary-war-card:hover::before {
  opacity: 1;
}

.legendary-war-card:hover {
  border-color: rgba(251, 191, 36, 0.5);
  box-shadow: 0 4px 12px rgba(251, 191, 36, 0.2);
}

@media (max-width: 768px) {
  .wars-hero__header {
    flex-direction: column;
    align-items: flex-start;
  }

  .wars-hero__stats {
    width: 100%;
    justify-content: space-between;
  }

  .war-card__fight {
    flex-direction: column;
    gap: 16px;
    padding: 20px 12px;
  }

  .war-card__fighter {
    max-width: 100%;
    align-items: center !important;
  }

  .war-card__fighter-header {
    flex-direction: column !important;
    text-align: center;
  }

  .war-card__fighter-info {
    align-items: center !important;
    text-align: center !important;
  }

  .war-card__vs {
    transform: rotate(90deg);
  }

  .war-card__fighter-name {
    font-size: 13px;
  }

  .war-card__fighter-stats {
    justify-content: center;
  }
}
</style>
