<!-- Item Detail Page -->

{{> components/page-header
    title=data.item.name
    meta=meta
    breadcrumbs=data.breadcrumbs
}}

<!-- Item Stats Header Component -->
{{> components/item-stats
    typeId=data.entityId
    name=data.item.name
    itemStats=data.itemStats
    item=data.item
    group=data.group
    category=data.category
    dogmaAttributes=data.dogmaAttributes
    isShip=data.isShip
}}

<!-- Top Fittings (Ships Only) -->
{{#if data.isShip}}
{{> components/item-fittings topFittings=data.topFittings}}
{{/if}}

<!-- Price History -->
{{> components/item-prices priceHistory=data.priceHistory}}
