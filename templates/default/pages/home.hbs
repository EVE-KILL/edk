<!-- Home Page - EDK Style -->

<!-- Most Valuable Kills - Full Width at Top with Tabs -->
{{#if data.timeRange}}
{{> partials/mostvaluable-tabbed mostValuableKills=data.mostValuableKills mostValuableShips=data.mostValuableShips mostValuableStructures=data.mostValuableStructures timeRange=data.timeRange}}
{{else}}
{{> partials/mostvaluable-tabbed mostValuableKills=data.mostValuableKills mostValuableShips=data.mostValuableShips mostValuableStructures=data.mostValuableStructures timeRange="Last 7 Days"}}
{{/if}}

<!-- Two Column Layout: Sidebar + Killmail List -->
<div style="display: grid; grid-template-columns: minmax(200px, 225px) 1fr; gap: 12px; width: 100%; box-sizing: border-box;">
  <!-- Sidebar: Top 10 Stats -->
  <aside style="min-width: 0;">
    {{> components/top-10-stats stats=data.top10Stats characterTitle=data.characterTitle corporationTitle=data.corporationTitle allianceTitle=data.allianceTitle shipTitle=data.shipTitle systemTitle=data.systemTitle regionTitle=data.regionTitle timeRange=data.timeRange}}
  </aside>

  <!-- Main Content: Killmail List -->
  <section style="min-width: 0;">
    {{#if data.filterDefaults}}
      {{> partials/killlist-filters baseUrl=data.baseUrl filterDefaults=data.filterDefaults}}
    {{/if}}

    <!-- Killmail List -->
    {{> partials/killmail-list killmails=data.killmails limit=data.pagination.limit}}
  </section>
</div>
