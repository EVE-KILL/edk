<!-- Group Info -->
{{#if data.group}}
<div style="margin-bottom: 20px; background: var(--color-bg-tertiary); border: 1px solid var(--color-border-dark); border-radius: var(--radius-sm); padding: 16px;">
    <div style="display: grid; grid-template-columns: auto 1fr; gap: 12px; max-width: 600px;">
        {{#if data.category}}
        <span style="color: var(--color-text-secondary); font-size: 11px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.3px;">Category:</span>
        <span>{{data.category.name}}</span>
        {{/if}}
    </div>
</div>
{{/if}}
