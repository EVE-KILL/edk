<!-- Ship Group Statistics (Combined Kills & Losses) -->
{{#if shipGroupStats}}
<div style="margin-bottom: 20px;">
    <div class="block-header2">Ship Groups (Last 30 Days)</div>
    {{> components/ship-group-combined-stats columns=shipGroupColumns}}
</div>
{{/if}}

<!-- Top 10 + Recent Activity Layout -->
<div style="display: grid; grid-template-columns: 20% 80%; gap: 5px; width: 100%; box-sizing: border-box;">
  <aside style="min-width: 0; overflow: hidden;">
    {{#if top10Stats}}
      {{> components/top-10-stats top10Stats=top10Stats}}
    {{/if}}
  </aside>
  <section style="min-width: 0; overflow: hidden;">
    {{> partials/killmail-list killmails=recentKillmails}}
  </section>
</div>
