<!-- Faction Page -->

{{> components/page-header
  title=pageHeader.title
  breadcrumbs=pageHeader.breadcrumbs
  properties=factionProperties
}}

<!-- Faction Stats Header -->
{{> components/faction-stats
    factionId=factionId
    name=name
    imageUrl=imageUrl
    kills=kills
    factionStats=factionStats
    faction=faction
}}

<!-- Most Valuable Kills -->
{{#if mostValuableKills}}
{{> partials/mostvaluable mostValuableKills=mostValuableKills timeRange=mostValuableTimeRange}}
{{/if}}

<!-- Recent Activity with Top 10 Sidebar -->
<div style="display: grid; grid-template-columns: minmax(200px, 225px) 1fr; gap: 12px; width: 100%; box-sizing: border-box; margin-bottom: 20px;">
  <!-- Top 10 Sidebar -->
  <aside style="min-width: 0; overflow: hidden;">
    {{#if top10Stats}}
      {{> components/top-10-stats
          stats=top10Stats
          characterTitle="Characters"
          corporationTitle="Corporations"
          allianceTitle="Alliances"
          systemTitle="Systems"
          regionTitle="Regions"
          shipTitle="Ships"
          timeRange=topTimeRangeLabel
      }}
    {{/if}}
  </aside>

  <!-- Recent Killmails -->
  <section style="min-width: 0; overflow: hidden;">
      {{> partials/killmail-list killmails=recentKillmails wsFilter=wsFilter}}
  </section>
</div>
