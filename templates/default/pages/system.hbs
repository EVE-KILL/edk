<!-- System Detail - EDK Style -->

<!-- System Stats Header -->
{{> partials/entity-stats}}

<!-- System Info -->
{{#if data.system}}
<div style="margin-bottom: 20px; background: var(--color-bg-tertiary); border: 1px solid var(--color-border-dark); border-radius: var(--radius-sm); padding: 16px;">
    <div style="display: grid; grid-template-columns: auto 1fr; gap: 12px 24px; max-width: 800px;">
        {{#if data.region}}
        <span style="color: var(--color-text-secondary); font-size: 11px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.3px;">Region:</span>
        <span><a href="/region/{{data.region.regionId}}" style="color: var(--color-accent-blue-bright); text-decoration: none;">{{data.region.name}}</a></span>
        {{/if}}
        
        {{#if data.constellation}}
        <span style="color: var(--color-text-secondary); font-size: 11px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.3px;">Constellation:</span>
        <span><a href="/constellation/{{data.constellation.constellationId}}" style="color: var(--color-accent-blue-bright); text-decoration: none;">{{data.constellation.name}}</a></span>
        {{/if}}
        
        {{#if data.system.securityStatus}}
        <span style="color: var(--color-text-secondary); font-size: 11px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.3px;">Security:</span>
        <span>{{formatNumber data.system.securityStatus}}</span>
        {{/if}}
        
        {{#if data.system.securityClass}}
        <span style="color: var(--color-text-secondary); font-size: 11px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.3px;">Class:</span>
        <span>{{data.system.securityClass}}</span>
        {{/if}}
    </div>
</div>
{{/if}}

<!-- Most Valuable Kills -->
{{#if data.mostValuableKills}}
{{> partials/mostvaluable mostValuableKills=data.mostValuableKills timeRange="Last 7 Days"}}
{{/if}}

<!-- Recent Activity with Top 10 Sidebar -->
<div style="display: grid; grid-template-columns: minmax(200px, 225px) 1fr; gap: 12px; width: 100%; box-sizing: border-box; margin-bottom: 20px;">
  <!-- Top 10 Sidebar -->
  <aside style="min-width: 0; overflow: hidden;">
    {{#if data.top10Stats}}
      {{> components/top-10-stats stats=data.top10Stats timeRange="Last 7 Days"}}
    {{/if}}
  </aside>

  <!-- Recent Killmails -->
  <section style="min-width: 0; overflow: hidden;">
      {{> partials/killmail-list killmails=data.recentKillmails wsFilter=data.wsFilter}}
  </section>
</div>

<!-- Pagination -->
{{#if data.pagination}}
    {{> partials/pagination pagination=data.pagination baseUrl=data.baseUrl}}
{{/if}}
