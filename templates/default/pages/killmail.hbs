                    <td class="kb-table-cell"><b>Ship Value:</b></td>
                    <td class="kb-table-cell" style="text-align: right;" colspan="4">
                        <span class="isk-value">{{formatISK stats.shipValue}}</span>
                    </td>
                </tr>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <!-- Right Column - People -->
    <div id="kl-detail-right">

        <!-- Victim Info -->
        <div style="margin-bottom: 10px;">
            {{> partials/killmail-victim-info}}
        </div>

        <!-- Final Blow -->
        {{#if finalBlow}}
        <div style="margin-bottom: 10px;">
            <div style="background: var(--color-bg-tertiary); border: 1px solid var(--color-border-dark); border-radius: 4px; margin-bottom: 20px; overflow: visible; position: relative;">
                <div style="padding: 12px 16px; border-bottom: 1px solid var(--color-border-dark);">
                    <div style="color: var(--color-text-white); font-weight: 600; font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px;">
                        Final Blow
                    </div>
                </div>

                <div style="padding: 12px 16px; display: flex; flex-direction: column; gap: 12px;">
                    <!-- Character Info -->
                    <div style="display: flex; gap: 12px; align-items: flex-start;">
                        <div style="flex-shrink: 0;">
                            {{#if finalBlow.character.id}}
                            {{> partials/eve-image type="character" id=finalBlow.character.id size=32 alt=finalBlow.character.name}}
                            {{/if}}
                        </div>
                        <div style="flex: 1; min-width: 0;">
                            <div style="margin-bottom: 2px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><b style="font-size: 11px; color: var(--color-text-white);">{{finalBlow.character.name}}</b></div>
                            <div style="color: var(--color-text-secondary); font-size: 9px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{finalBlow.corporation.name}}</div>
                            {{#if finalBlow.alliance.name}}
                            <div style="color: var(--color-text-secondary); font-size: 9px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{finalBlow.alliance.name}}</div>
                            {{/if}}
                        </div>
                    </div>

                    <!-- Ship Info -->
                    <div style="display: flex; gap: 12px; align-items: flex-start; border-top: 1px solid var(--color-border-dark); padding-top: 12px;">
                        <div style="flex-shrink: 0;">
                            {{#if finalBlow.ship.typeId}}
                            {{> partials/eve-image type="ship" id=finalBlow.ship.typeId size=32 alt=finalBlow.ship.name}}
                            {{/if}}
                        </div>
                        <div style="flex: 1; min-width: 0;">
                            <div style="margin-bottom: 2px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><b style="font-size: 11px; color: var(--color-text-white);">{{finalBlow.ship.name}}</b>{{#if finalBlow.ship.groupName}} <span style="color: var(--color-text-secondary); font-size: 9px;">({{finalBlow.ship.groupName}})</span>{{/if}}</div>
                            {{#if finalBlow.weapon.name}}
                            <div style="color: var(--color-text-secondary); font-size: 9px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{finalBlow.weapon.name}}</div>
                            {{/if}}
                            <div style="color: #4ade80; font-weight: bold; font-size: 10px; margin-top: 4px;">{{finalBlow.damageDone}} damage</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}

        <!-- Involved Parties -->
        {{#if attackers}}
        <div style="margin-top: 10px;">
            <div style="background: var(--color-bg-tertiary); border: 1px solid var(--color-border-dark); border-radius: 4px; margin-bottom: 20px; overflow: visible; position: relative;">
                <div style="padding: 12px 16px; border-bottom: 1px solid var(--color-border-dark);">
                    <div style="color: var(--color-text-white); font-weight: 600; font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px;">
                        Involved Parties ({{attackers.length}})
                    </div>
                </div>

                <div style="padding: 12px 16px; display: flex; flex-direction: column; gap: 12px;">
                    {{#each attackers}}
                    <div style="display: flex; gap: 12px; align-items: flex-start;{{#if @index}} border-top: 1px solid var(--color-border-dark); padding-top: 12px;{{/if}}">
                        <div style="flex-shrink: 0; position: relative; display: inline-block;">
                            {{#if character.id}}
                            {{> partials/eve-image type="character" id=character.id size=32 alt=character.name}}
                            {{/if}}
                            {{#if corporation.id}}
                            {{> partials/eve-image type="corporation" id=corporation.id size=16 alt=corporation.name class="kb-corp-overlay"}}
                            {{/if}}
                        </div>
                        <div style="flex: 1; min-width: 0; display: flex; flex-direction: column; justify-content: space-between;">
                            <div>
                                <div style="margin-bottom: 1px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><b style="font-size: 11px; color: var(--color-text-white);">{{character.name}}</b></div>
                                <div style="color: var(--color-text-secondary); font-size: 9px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{corporation.name}}</div>
                                {{#if alliance.name}}
                                <div style="color: var(--color-text-secondary); font-size: 9px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{alliance.name}}</div>
                                {{/if}}
                            </div>
                            {{#if ship.name}}
                            <div style="color: var(--color-text-secondary); font-size: 9px; margin-top: 4px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{ship.name}}{{#if ship.groupName}} ({{ship.groupName}}){{/if}}</div>
                            {{/if}}
                        </div>
                        <div style="flex-shrink: 0; text-align: right;">
                            <div style="color: #4ade80; font-weight: bold; font-size: 10px;">{{damageDone}}</div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/if}}

    </div>
</div>

<!-- Raw Killmail Link -->
<div style="margin-top: 20px; text-align: center;">
    <a href="#" onclick="ReverseContentDisplay('popup'); return false;" style="color: #9bb3e8;">
        View Raw Killmail
    </a>
    |
    <a href="/api/killmails/{{killmail.killmailId}}" style="color: #9bb3e8;">
        JSON API
    </a>
</div>

