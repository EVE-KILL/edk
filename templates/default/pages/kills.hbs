{{#if data.recentKillmails}}
<!-- Kills for Followed Entities or Global Feed -->

<!-- Most Valuable Kills Section - Full Width -->
<section style="margin-bottom: 20px;">
    {{> partials/mostvaluable mostValuableKills=data.mostValuableKills timeRange=data.mostValuableTimeRange}}
</section>

<div class="killlist-wrapper">
  <!-- Top 10 Stats (Left Sidebar) -->
  {{#if data.topCharactersFormatted}}
  {{#if data.topCharactersFormatted.length}}
  <div class="top-10-container">
    {{> partials/top-10-box title="Top Characters" items=data.topCharactersFormatted timeRange=data.topTimeRangeLabel}}
    {{> partials/top-10-box title="Top Corporations" items=data.topCorporationsFormatted timeRange=data.topTimeRangeLabel}}
    {{> partials/top-10-box title="Top Alliances" items=data.topAlliancesFormatted timeRange=data.topTimeRangeLabel}}
    {{> partials/top-10-box title="Top Systems" items=data.topSystemsFormatted timeRange=data.topTimeRangeLabel}}
    {{> partials/top-10-box title="Top Regions" items=data.topRegionsFormatted timeRange=data.topTimeRangeLabel}}
  </div>
  {{/if}}
  {{/if}}

  <!-- Main Content Area (Right 80%) -->
  <div class="killlist-main">
    {{#if data.filterDefaults}}
      {{> partials/killlist-filters baseUrl=data.baseUrl filterDefaults=data.filterDefaults pagination=data.pagination filterQueryString=data.filterQueryString}}
    {{/if}}

    <!-- Killmails List -->
    <section class="killlist-content">
    {{> partials/killmail-list killmails=data.recentKillmails wsFilter=data.wsFilter limit=data.pagination.limit}}
    </section>
  </div>
</div>

<style>
/* Outer flexbox container - handles layout of top boxes and main content */
.killlist-wrapper {
  display: flex;
  flex-direction: row;
  gap: 20px;
  width: 100%;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

/* Top boxes section - fixed 25% width on the left */
.killlist-wrapper .top-10-container {
  flex: 0 0 25%;
  box-sizing: border-box;
  min-width: 200px;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 15px;
}

/* Main content section - takes remaining 75% space */
.killlist-main {
  flex: 1 1 75%;
  box-sizing: border-box;
  min-width: 300px;
  padding: 0;
  margin: 0;
}

/* Responsive: stack on smaller screens */
@media (max-width: 1200px) {
  .killlist-wrapper {
    flex-direction: column;
    gap: 20px;
  }

  .killlist-wrapper .top-10-container {
    flex: 0 0 auto;
    width: 100%;
    min-width: auto;
  }

  .killlist-main {
    flex: 0 0 auto;
    width: 100%;
    min-width: auto;
  }
}
</style>

{{else}}
<!-- No killmails found for this filter -->
<div class="box">
    <div class="box-content" style="text-align: center; padding: 40px 20px;">
        <p style="font-size: 18px; color: var(--color-text-secondary); margin-bottom: 15px;">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" style="opacity: 0.3; margin-bottom: 20px;">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M16 16s-1.5-2-4-2-4 2-4 2"></path>
                <line x1="9" y1="9" x2="9.01" y2="9"></line>
                <line x1="15" y1="9" x2="15.01" y2="9"></line>
            </svg>
        </p>
        <p style="font-size: 16px; margin-bottom: 10px;">No killmails found</p>
        <p style="color: var(--color-text-tertiary); font-size: 14px;">
            {{#if pageTitle}}
                There are currently no {{pageTitle}} in the database.
            {{else}}
                There are currently no killmails matching your criteria.
            {{/if}}
        </p>
        <p style="color: var(--color-text-tertiary); font-size: 14px; margin-top: 10px;">
            Check back later or try a different filter.
        </p>
    </div>
</div>
{{/if}}
