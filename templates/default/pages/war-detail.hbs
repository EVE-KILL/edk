<!-- War Detail Page - EDK Style -->

{{> components/page-header
  title=pageHeader.title
  breadcrumbs=pageHeader.breadcrumbs
  meta=pageHeader.meta
}}

<!-- War Hero (Fight Card Style) -->
<div class="war-hero" style="margin-top: 20px;">
  <div class="war-hero__container">

    <!-- Fight Card -->
    <div class="war-hero__fight">
      <!-- Aggressor Side -->
      <div class="war-hero__combatant war-hero__combatant--left">
        <div class="war-hero__combatant-meta">
          <div class="war-hero__combatant-image">
            {{#if war.aggressorAllianceId}}
              {{> partials/eve-image type="alliance" id=war.aggressorAllianceId size=64 class="war-hero__avatar"}}
            {{else if war.aggressorCorporationId}}
              {{> partials/eve-image type="corporation" id=war.aggressorCorporationId size=64 class="war-hero__avatar"}}
            {{/if}}
          </div>
          <div class="war-hero__combatant-details">
            <div class="war-hero__combatant-label">Aggressor</div>
            <div class="war-hero__combatant-name">
              {{#if war.aggressorAllianceId}}
                <a href="/alliance/{{war.aggressorAllianceId}}" class="war-hero__link">
                  {{#if war.aggressorAllianceName}}{{war.aggressorAllianceName}}{{else}}Alliance #{{war.aggressorAllianceId}}{{/if}}
                </a>
              {{else if war.aggressorCorporationId}}
                <a href="/corporation/{{war.aggressorCorporationId}}" class="war-hero__link">
                  {{#if war.aggressorCorporationName}}{{war.aggressorCorporationName}}{{else}}Corporation #{{war.aggressorCorporationId}}{{/if}}
                </a>
              {{else}}
                Unknown
              {{/if}}
            </div>
          </div>
        </div>
        <div class="war-hero__combatant-stats">
          <div class="war-hero__stat">
            <div class="war-hero__stat-value">{{stats.aggressorShipsKilled}}</div>
            <div class="war-hero__stat-label">Ships Killed</div>
          </div>
          <div class="war-hero__stat">
            <div class="war-hero__stat-value color-green">{{abbreviateISK stats.aggressorIskDestroyed}}</div>
            <div class="war-hero__stat-label">ISK Destroyed</div>
          </div>
        </div>
      </div>

      <!-- VS Badge with War Info -->
      <div class="war-hero__vs">
        <div class="war-hero__vs-text">VS</div>
        <div class="war-hero__vs-score">{{stats.aggressorShipsKilled}} : {{stats.defenderShipsKilled}}</div>
        <div class="war-hero__vs-info">
          <div class="war-hero__vs-status {{#unless war.finished}}war-hero__vs-status--active{{/unless}}">
            {{#if war.finished}}Finished{{else}}Active{{/if}}
          </div>
          {{#if war.started}}
          <div class="war-hero__vs-date">Started {{war.started}}</div>
          {{else if war.declared}}
          <div class="war-hero__vs-date">Declared {{war.declared}}</div>
          {{/if}}
          {{#if war.finished}}
          <div class="war-hero__vs-date">Ended {{war.finished}}</div>
          {{/if}}
        </div>
      </div>

      <!-- Defender Side -->
      <div class="war-hero__combatant war-hero__combatant--right">
        <div class="war-hero__combatant-meta">
          <div class="war-hero__combatant-image">
            {{#if war.defenderAllianceId}}
              {{> partials/eve-image type="alliance" id=war.defenderAllianceId size=64 class="war-hero__avatar"}}
            {{else if war.defenderCorporationId}}
              {{> partials/eve-image type="corporation" id=war.defenderCorporationId size=64 class="war-hero__avatar"}}
            {{/if}}
          </div>
          <div class="war-hero__combatant-details">
            <div class="war-hero__combatant-label">Defender</div>
            <div class="war-hero__combatant-name">
              {{#if war.defenderAllianceId}}
                <a href="/alliance/{{war.defenderAllianceId}}" class="war-hero__link">
                  {{#if war.defenderAllianceName}}{{war.defenderAllianceName}}{{else}}Alliance #{{war.defenderAllianceId}}{{/if}}
                </a>
              {{else if war.defenderCorporationId}}
                <a href="/corporation/{{war.defenderCorporationId}}" class="war-hero__link">
                  {{#if war.defenderCorporationName}}{{war.defenderCorporationName}}{{else}}Corporation #{{war.defenderCorporationId}}{{/if}}
                </a>
              {{else}}
                Unknown
              {{/if}}
            </div>
          </div>
        </div>
        <div class="war-hero__combatant-stats">
          <div class="war-hero__stat">
            <div class="war-hero__stat-value">{{stats.defenderShipsKilled}}</div>
            <div class="war-hero__stat-label">Ships Killed</div>
          </div>
          <div class="war-hero__stat">
            <div class="war-hero__stat-value color-green">{{abbreviateISK stats.defenderIskDestroyed}}</div>
            <div class="war-hero__stat-label">ISK Destroyed</div>
          </div>
        </div>
      </div>
    </div>

    <!-- War Stats Footer -->
    <div class="war-hero__footer">
      <div class="war-hero__footer-stat">
        <span class="war-hero__footer-label">Total Kills:</span>
        <span class="war-hero__footer-value">{{stats.killCount}}</span>
      </div>
      <div class="war-hero__footer-stat">
        <span class="war-hero__footer-label">Total Value:</span>
        <span class="war-hero__footer-value color-gold">{{abbreviateISK stats.totalValue}}</span>
      </div>
      <div class="war-hero__footer-stat">
        <span class="war-hero__footer-label">First Kill:</span>
        <span class="war-hero__footer-value">{{#if stats.firstKill}}{{stats.firstKill}}{{else}}—{{/if}}</span>
      </div>
      <div class="war-hero__footer-stat">
        <span class="war-hero__footer-label">Latest Kill:</span>
        <span class="war-hero__footer-value">{{#if stats.lastKill}}{{stats.lastKill}}{{else}}—{{/if}}</span>
      </div>
    </div>
  </div>
</div>

<!-- Show allies under their respective combatant -->
{{#if allies.length}}
<div class="war-allies">
  <div class="war-allies__note">+ Allied Forces fighting alongside defenders</div>
  <div class="war-allies__grid">
    {{#each allies}}
    <a href="{{#if allianceId}}/alliance/{{allianceId}}{{else if corporationId}}/corporation/{{corporationId}}{{/if}}" class="war-allies__item">
      {{#if allianceId}}
        {{> partials/eve-image type="alliance" id=allianceId size=24 class="war-allies__item-img"}}
        <span>{{#if allianceName}}{{allianceName}}{{else}}Alliance #{{allianceId}}{{/if}}</span>
      {{else if corporationId}}
        {{> partials/eve-image type="corporation" id=corporationId size=24 class="war-allies__item-img"}}
        <span>{{#if corporationName}}{{corporationName}}{{else}}Corporation #{{corporationId}}{{/if}}</span>
      {{/if}}
    </a>
    {{/each}}
  </div>
</div>
{{/if}}

<!-- Split Screen: Aggressor vs Defender -->
<div class="war-versus">
  <!-- Aggressor Side -->
  <div class="war-versus__side war-versus__side--aggressor">
    <div class="war-versus__header">
      <h3 class="war-versus__title">Aggressor Forces</h3>
      <div class="war-versus__lead">
        {{#if war.aggressorAllianceId}}
          <a href="/alliance/{{war.aggressorAllianceId}}" class="war-versus__link">
            {{#if war.aggressorAllianceName}}{{war.aggressorAllianceName}}{{else}}Alliance #{{war.aggressorAllianceId}}{{/if}}
          </a>
        {{else if war.aggressorCorporationId}}
          <a href="/corporation/{{war.aggressorCorporationId}}" class="war-versus__link">
            {{#if war.aggressorCorporationName}}{{war.aggressorCorporationName}}{{else}}Corporation #{{war.aggressorCorporationId}}{{/if}}
          </a>
        {{/if}}
      </div>
    </div>

    <!-- Aggressor Stats -->
    <div class="war-versus__stats">
      <div class="war-versus__stat-box">
        <div class="war-versus__stat-value">{{stats.aggressorShipsKilled}}</div>
        <div class="war-versus__stat-label">Enemy Ships Destroyed</div>
      </div>
      <div class="war-versus__stat-box">
        <div class="war-versus__stat-value color-green">{{abbreviateISK stats.aggressorIskDestroyed}}</div>
        <div class="war-versus__stat-label">ISK Destroyed</div>
      </div>
    </div>

    <!-- Aggressor Ship Class Stats -->
    {{#if aggressorShipClassStats.top}}
    <div class="war-versus__section">
      {{> components/ship-class-stats shipClassStats=aggressorShipClassStats}}
    </div>
    {{/if}}

    <!-- Aggressor Top Participants -->
    <div class="war-versus__section">
      <div class="war-versus__section-title">Top Contributors</div>
      <div class="war-versus__participants">
        {{#each topAggressorParticipants}}
        <div class="war-versus__participant">
          <div class="war-versus__participant-logos">
            {{#if allianceId}}
              <div class="war-versus__participant-logo">
                {{> partials/eve-image type="alliance" id=allianceId size=32}}
              </div>
            {{/if}}
            {{#if corporationId}}
              <div class="war-versus__participant-logo">
                {{> partials/eve-image type="corporation" id=corporationId size=32}}
              </div>
            {{/if}}
          </div>
          <div class="war-versus__participant-main">
            {{#if allianceId}}
              <div class="war-versus__participant-alliance">
                <a href="/alliance/{{allianceId}}">{{#if allianceName}}{{allianceName}}{{else}}Alliance #{{allianceId}}{{/if}}</a>
              </div>
            {{/if}}
            {{#if corporationId}}
              <div class="war-versus__participant-corporation">
                <a href="/corporation/{{corporationId}}">{{#if corporationName}}{{corporationName}}{{else}}Corporation #{{corporationId}}{{/if}}</a>
              </div>
            {{/if}}
          </div>
          <div class="war-versus__participant-stats">
            <span>{{kills}} kills</span>
            <span class="color-green">{{abbreviateISK value}}</span>
          </div>
        </div>
        {{/each}}
      </div>
    </div>

    <!-- Aggressor Kills -->
    <div class="war-versus__section">
      <div class="war-versus__section-title">Recent Kills ({{aggressorKills.length}})</div>
      <div class="war-versus__kills">
        {{#each aggressorKills}}
        <div class="war-versus__kill" onclick="window.location.href='/killmail/{{killmailId}}';">
          {{> partials/eve-image type="ship" id=victim.ship.typeId size=32 alt=victim.ship.name class="war-versus__kill-icon"}}
          <div class="war-versus__kill-info">
            <div class="war-versus__kill-ship">{{victim.ship.name}}</div>
            <div class="war-versus__kill-pilot">
              {{#if victim.character.name}}{{victim.character.name}}{{else}}Unknown{{/if}}
            </div>
          </div>
          <div class="war-versus__kill-meta">
            <div class="war-versus__kill-value">{{abbreviateISK totalValue}}</div>
            <div class="war-versus__kill-time">{{killmailTimeRelative}}</div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  <!-- Center Divider -->
  <div class="war-versus__divider">
    <div class="war-versus__divider-line"></div>
  </div>

  <!-- Defender Side -->
  <div class="war-versus__side war-versus__side--defender">
    <div class="war-versus__header">
      <h3 class="war-versus__title">Defender Forces</h3>
      <div class="war-versus__lead">
        {{#if war.defenderAllianceId}}
          <a href="/alliance/{{war.defenderAllianceId}}" class="war-versus__link">
            {{#if war.defenderAllianceName}}{{war.defenderAllianceName}}{{else}}Alliance #{{war.defenderAllianceId}}{{/if}}
          </a>
        {{else if war.defenderCorporationId}}
          <a href="/corporation/{{war.defenderCorporationId}}" class="war-versus__link">
            {{#if war.defenderCorporationName}}{{war.defenderCorporationName}}{{else}}Corporation #{{war.defenderCorporationId}}{{/if}}
          </a>
        {{/if}}
      </div>
    </div>

    <!-- Defender Stats -->
    <div class="war-versus__stats">
      <div class="war-versus__stat-box">
        <div class="war-versus__stat-value">{{stats.defenderShipsKilled}}</div>
        <div class="war-versus__stat-label">Enemy Ships Destroyed</div>
      </div>
      <div class="war-versus__stat-box">
        <div class="war-versus__stat-value color-green">{{abbreviateISK stats.defenderIskDestroyed}}</div>
        <div class="war-versus__stat-label">ISK Destroyed</div>
      </div>
    </div>

    <!-- Defender Ship Class Stats -->
    {{#if defenderShipClassStats.top}}
    <div class="war-versus__section">
      {{> components/ship-class-stats shipClassStats=defenderShipClassStats}}
    </div>
    {{/if}}

    <!-- Defender Top Participants -->
    <div class="war-versus__section">
      <div class="war-versus__section-title">Top Contributors</div>
      <div class="war-versus__participants">
        {{#each topDefenderParticipants}}
        <div class="war-versus__participant">
          <div class="war-versus__participant-logos">
            {{#if allianceId}}
              <div class="war-versus__participant-logo">
                {{> partials/eve-image type="alliance" id=allianceId size=32}}
              </div>
            {{/if}}
            {{#if corporationId}}
              <div class="war-versus__participant-logo">
                {{> partials/eve-image type="corporation" id=corporationId size=32}}
              </div>
            {{/if}}
          </div>
          <div class="war-versus__participant-main">
            {{#if allianceId}}
              <div class="war-versus__participant-alliance">
                <a href="/alliance/{{allianceId}}">{{#if allianceName}}{{allianceName}}{{else}}Alliance #{{allianceId}}{{/if}}</a>
              </div>
            {{/if}}
            {{#if corporationId}}
              <div class="war-versus__participant-corporation">
                <a href="/corporation/{{corporationId}}">{{#if corporationName}}{{corporationName}}{{else}}Corporation #{{corporationId}}{{/if}}</a>
              </div>
            {{/if}}
          </div>
          <div class="war-versus__participant-stats">
            <span>{{kills}} kills</span>
            <span class="color-green">{{abbreviateISK value}}</span>
          </div>
        </div>
        {{/each}}
      </div>
    </div>

    <!-- Defender Kills -->
    <div class="war-versus__section">
      <div class="war-versus__section-title">Recent Kills ({{defenderKills.length}})</div>
      <div class="war-versus__kills">
        {{#each defenderKills}}
        <div class="war-versus__kill" onclick="window.location.href='/killmail/{{killmailId}}';">
          {{> partials/eve-image type="ship" id=victim.ship.typeId size=32 alt=victim.ship.name class="war-versus__kill-icon"}}
          <div class="war-versus__kill-info">
            <div class="war-versus__kill-ship">{{victim.ship.name}}</div>
            <div class="war-versus__kill-pilot">
              {{#if victim.character.name}}{{victim.character.name}}{{else}}Unknown{{/if}}
            </div>
          </div>
          <div class="war-versus__kill-meta">
            <div class="war-versus__kill-value">{{abbreviateISK totalValue}}</div>
            <div class="war-versus__kill-time">{{killmailTimeRelative}}</div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<!-- Most Valuable Kills (Full Width) -->
{{#if mostValuable.length}}
<div style="margin-top: var(--spacing-lg);">
  {{> partials/mostvaluable mostValuableKills=mostValuable timeRange="War Duration"}}
</div>
{{/if}}

<!-- All War Killmails -->
<div style="margin-top: var(--spacing-lg);">
  {{> components/section-header title="All War Killmails" bordered=false}}

  <!-- Killlist Filters -->
  {{> partials/killlist-filters baseUrl=(concat "/wars/" war.warId) filterDefaults=filterDefaults}}

  {{#if killmails.length}}
    <div data-killmail-list data-ws-updates="false">
      {{> partials/killmail-list killmails=killmails}}
    </div>
  {{else}}
    <div style="background: var(--color-bg-tertiary); border: 1px solid var(--color-border-dark); border-radius: var(--radius-sm); padding: 40px; text-align: center; margin-top: 12px;">
      <div style="color: var(--color-text-secondary); font-size: 12px;">No killmails found matching your filters.</div>
    </div>
  {{/if}}
</div>

<style>
/* War Hero Section */
.war-hero {
  margin-bottom: var(--spacing-lg);
}

.war-hero__container {
  background: var(--color-bg-tertiary);
  border: 1px solid var(--color-border-dark);
  border-radius: var(--radius-sm);
  overflow: hidden;
}

/* Fight Card */
.war-hero__fight {
  display: flex;
  align-items: stretch;
  justify-content: center;
  padding: 24px 16px;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.4));
  gap: 12px;
  min-height: 180px;
}

.war-hero__combatant {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16px;
  max-width: 45%;
  align-items: center;
}

.war-hero__combatant-meta {
  display: flex;
  gap: 12px;
  align-items: center;
  width: 100%;
}

.war-hero__combatant-details {
  display: flex;
  flex-direction: column;
  gap: 8px;
  flex: 1;
}

.war-hero__combatant--left .war-hero__combatant-meta {
  flex-direction: row-reverse;
}

.war-hero__combatant--left .war-hero__combatant-details {
  align-items: flex-end;
  text-align: right;
}

.war-hero__combatant--right .war-hero__combatant-details {
  align-items: flex-start;
  text-align: left;
}

.war-hero__combatant-image {
  flex-shrink: 0;
}

.war-hero__combatant-label {
  font-size: 10px;
  text-transform: uppercase;
  letter-spacing: 0.8px;
  color: var(--color-text-secondary);
  font-weight: 600;
  opacity: 0.8;
}

.war-hero__combatant-name {
  font-size: 20px;
  font-weight: 700;
  color: var(--color-text-white);
  line-height: 1.3;
  display: flex;
  align-items: center;
  font-family: 'Orbitron', 'Rajdhani', 'Russo One', sans-serif;
  letter-spacing: 0.5px;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
}

.war-hero__link {
  color: var(--color-text-white);
  text-decoration: none;
  transition: color 0.2s ease;
}

.war-hero__link:hover {
  color: var(--color-accent-gold);
}

.war-hero__combatant-stats {
  display: flex;
  gap: 24px;
  justify-content: center;
  width: 100%;
}

.war-hero__stat {
  display: flex;
  flex-direction: column;
  gap: 6px;
  align-items: center;
}

.war-hero__stat-value {
  font-size: 22px;
  font-weight: 700;
  color: var(--color-text-white);
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.8);
}

.war-hero__stat-label {
  font-size: 10px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  color: var(--color-text-secondary);
  opacity: 0.9;
  white-space: nowrap;
}

/* VS Badge */
.war-hero__vs {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6px;
  flex-shrink: 0;
  align-self: center;
}

.war-hero__vs-text {
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(74, 158, 255, 0.2), rgba(139, 92, 246, 0.2));
  border: 1px solid rgba(255, 255, 255, 0.15);
  border-radius: 50%;
  font-size: 16px;
  font-weight: 800;
  color: #fff;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.7);
  letter-spacing: 1px;
  font-family: 'Rajdhani', 'Impact', sans-serif;
}

.war-hero__vs-score {
  font-size: 14px;
  font-weight: 700;
  color: var(--color-text-secondary);
  font-family: 'Rajdhani', monospace;
}

.war-hero__vs-info {
  margin-top: 12px;
  display: flex;
  flex-direction: column;
  gap: 6px;
  align-items: center;
}

.war-hero__vs-status {
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: 0.8px;
  font-weight: 700;
  padding: 4px 12px;
  border-radius: 12px;
  background: rgba(156, 163, 175, 0.2);
  color: #9ca3af;
  border: 1px solid rgba(156, 163, 175, 0.3);
}

.war-hero__vs-status--active {
  background: rgba(74, 222, 128, 0.2);
  color: #4ade80;
  border: 1px solid rgba(74, 222, 128, 0.3);
}

.war-hero__vs-date {
  font-size: 10px;
  color: var(--color-text-secondary);
  font-style: italic;
  white-space: nowrap;
}

/* Footer Stats */
.war-hero__footer {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 0;
  border-top: 1px solid var(--color-border-dark);
}

.war-hero__footer-stat {
  padding: 12px 16px;
  border-right: 1px solid var(--color-border-dark);
  background: rgba(0, 0, 0, 0.15);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: background 0.2s ease;
}

.war-hero__footer-stat:hover {
  background: rgba(74, 158, 255, 0.1);
}

.war-hero__footer-stat:last-child {
  border-right: none;
}

.war-hero__footer-label {
  font-size: 10px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  color: var(--color-text-secondary);
}

.war-hero__footer-value {
  font-size: 13px;
  font-weight: 700;
  color: var(--color-text-white);
}

/* War Allies */
.war-allies {
  margin-bottom: var(--spacing-md);
  text-align: center;
}

.war-allies__note {
  font-size: 10px;
  color: var(--color-text-secondary);
  font-style: italic;
  margin-bottom: 10px;
}

.war-allies__grid {
  display: flex;
  justify-content: center;
  gap: 12px;
  flex-wrap: wrap;
}

.war-allies__item {
  font-size: 11px;
  color: var(--color-accent-blue);
  padding: 4px 10px;
  background: rgba(74, 158, 255, 0.1);
  border: 1px solid var(--color-border-dark);
  border-radius: var(--radius-sm);
}

.war-allies__item a {
  color: var(--color-accent-blue);
  text-decoration: none;
}

.war-allies__item a:hover {
  color: var(--color-accent-gold);
}

/* Split Screen Versus Layout */
.war-versus {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  gap: 0;
  margin-bottom: var(--spacing-lg);
  background: var(--color-bg-tertiary);
  border: 1px solid var(--color-border-dark);
  border-radius: var(--radius-sm);
  overflow: hidden;
}

.war-versus__side {
  display: flex;
  flex-direction: column;
  padding: 20px;
}

.war-versus__side--aggressor {
  background: rgba(239, 68, 68, 0.03);
  border-right: 1px solid var(--color-border-dark);
}

.war-versus__side--defender {
  background: rgba(74, 158, 255, 0.03);
}

.war-versus__header {
