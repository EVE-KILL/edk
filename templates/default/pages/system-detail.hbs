<!-- System Detail - EDK Style -->

<!-- System Stats Header -->
{{> components/entity-header
    entityId=system.solarSystemId
    entityType="system"
    name=system.name
    stats=stats
}}

<!-- System Info Section -->
{{#if system}}
<div style="margin-bottom: 20px;">
    <div class="data-table">
        <tbody>
            <tr>
                <td class="data-table__label">Region:</td>
                <td><a href="/region/{{region.regionId}}">{{region.name}}</a></td>
            </tr>
            <tr>
                <td class="data-table__label">Security Class:</td>
                <td>{{system.securityClass}}</td>
            </tr>
            <tr>
                <td class="data-table__label">Security Status:</td>
                <td>{{system.securityStatus}}</td>
            </tr>
        </tbody>
    </div>
</div>
{{/if}}

<!-- Recent Activity with Top 10 Sidebar -->
<div style="display: grid; grid-template-columns: 20% 80%; gap: 5px; width: 100%; box-sizing: border-box; margin-bottom: 20px;">
  <!-- Top 10 Sidebar -->
  <aside style="min-width: 0; overflow: hidden;">
    {{#if top10Stats}}
      {{> components/top-10-stats top10Stats=top10Stats}}
    {{/if}}
  </aside>

  <!-- Recent Killmails -->
  <section style="min-width: 0; overflow: hidden;">
      <div class="block-header2">Recent Kills in {{system.name}}</div>
      {{> partials/killmail-list killmails=killmails}}
  </section>
</div>
