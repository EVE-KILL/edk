{{#if killmails}}
<!-- Losses for Followed Entities -->

<!-- Statistics Section -->
{{#if statistics}}
<div style="margin-bottom: 30px;">
    <div class="block-header2">Losses Statistics</div>

    <table class="kb-table" cellspacing="1" style="width: 100%;">
        <tr class="kb-table-header">
            <td class="kb-table-header" colspan="4" style="text-align: center;">Overall Statistics</td>
        </tr>
        <tr class="kb-table-row-even">
            <td class="kb-table-cell" style="width: 25%;"><b>Total Losses:</b></td>
            <td class="kb-table-cell" style="width: 25%;">{{statistics.totalLosses}}</td>
            <td class="kb-table-cell" style="width: 25%;"><b>Total ISK Lost:</b></td>
            <td class="kb-table-cell" style="width: 25%;"><span class="isk-value">{{formatISK statistics.totalISKLost}}</span></td>
        </tr>
        <tr class="kb-table-row-odd">
            <td class="kb-table-cell"><b>Solo Losses:</b></td>
            <td class="kb-table-cell">{{statistics.soloKills}}</td>
            <td class="kb-table-cell"><b>NPC Losses:</b></td>
            <td class="kb-table-cell">{{statistics.npcKills}}</td>
        </tr>
        <tr class="kb-table-row-even">
            <td class="kb-table-cell"><b>Avg Attackers/Loss:</b></td>
            <td class="kb-table-cell">{{statistics.averageAttackersPerKill}}</td>
            <td class="kb-table-cell"><b>Unique Enemies:</b></td>
            <td class="kb-table-cell">{{statistics.totalUniquePilots}}</td>
        </tr>

        <tr class="kb-table-header">
            <td class="kb-table-header" colspan="4" style="text-align: center;">Activity</td>
        </tr>
        <tr class="kb-table-row-even">
            <td class="kb-table-cell"><b>Active Enemies (24h):</b></td>
            <td class="kb-table-cell">{{statistics.activePilotsLast24Hours}}</td>
            <td class="kb-table-cell"><b>Active Enemies (7d):</b></td>
            <td class="kb-table-cell">{{statistics.activePilotsLast7Days}}</td>
        </tr>
        <tr class="kb-table-row-odd">
            <td class="kb-table-cell"><b>Losses (Last 24h):</b></td>
            <td class="kb-table-cell">{{statistics.killsLast24Hours}}</td>
            <td class="kb-table-cell"><b>Losses (Last 7d):</b></td>
            <td class="kb-table-cell">{{statistics.killsLast7Days}}</td>
        </tr>
        <tr class="kb-table-row-even">
            <td class="kb-table-cell"><b>Losses (Last 30d):</b></td>
            <td class="kb-table-cell">{{statistics.killsLast30Days}}</td>
            <td class="kb-table-cell"></td>
            <td class="kb-table-cell"></td>
        </tr>

        {{#if statistics.topKiller}}
        <tr class="kb-table-header">
            <td class="kb-table-header" colspan="4" style="text-align: center;">Top Enemy Attackers & Organizations</td>
        </tr>
        <tr class="kb-table-row-even">
            <td class="kb-table-cell"><b>Top Killer:</b></td>
            <td class="kb-table-cell"><a href="/character/{{statistics.topKiller.id}}">{{statistics.topKiller.name}}</a> ({{statistics.topKiller.kills}} kills)</td>
            <td class="kb-table-cell"><b>Top Corporation:</b></td>
            <td class="kb-table-cell"><a href="/corporation/{{statistics.topCorporation.id}}">{{statistics.topCorporation.name}}</a> ({{statistics.topCorporation.kills}} kills)</td>
        </tr>
        <tr class="kb-table-row-odd">
            <td class="kb-table-cell"><b>Top Alliance:</b></td>
            <td class="kb-table-cell"><a href="/alliance/{{statistics.topAlliance.id}}">{{statistics.topAlliance.name}}</a> ({{statistics.topAlliance.kills}} kills)</td>
            <td class="kb-table-cell"></td>
            <td class="kb-table-cell"></td>
        </tr>
        {{/if}}

        {{#if statistics.mostDestroyedShip}}
        <tr class="kb-table-header">
            <td class="kb-table-header" colspan="4" style="text-align: center;">Ships & Systems</td>
        </tr>
        <tr class="kb-table-row-even">
            <td class="kb-table-cell"><b>Most Lost Ship:</b></td>
            <td class="kb-table-cell"><a href="/type/{{statistics.mostDestroyedShip.id}}">{{statistics.mostDestroyedShip.name}}</a> ({{statistics.mostDestroyedShip.count}}x)</td>
            <td class="kb-table-cell"><b>Most Used Ship (Lost):</b></td>
            <td class="kb-table-cell"><a href="/type/{{statistics.mostUsedShip.id}}">{{statistics.mostUsedShip.name}}</a> ({{statistics.mostUsedShip.count}}x)</td>
        </tr>
        <tr class="kb-table-row-odd">
            <td class="kb-table-cell"><b>Most Dangerous System:</b></td>
            <td class="kb-table-cell"><a href="/system/{{statistics.mostDangerousSystem.id}}">{{statistics.mostDangerousSystem.name}}</a> ({{statistics.mostDangerousSystem.count}} losses)</td>
            <td class="kb-table-cell"></td>
            <td class="kb-table-cell"></td>
        </tr>
        {{/if}}
    </table>
</div>
{{/if}}

<!-- Pagination (Top) -->
{{#if pagination}}
    {{> partials/pagination}}
{{/if}}

<!-- Killmails List -->
<div style="margin: 20px 0;">
    {{> partials/killmail-list}}
</div>

<!-- Pagination (Bottom) -->
{{#if pagination}}
    {{> partials/pagination}}
{{/if}}

{{else}}
<!-- Placeholder when no followed entities are configured -->
<div class="box">
    <div class="box-header">Losses</div>
    <div class="box-content">
        <p>Recent losses will be displayed here.</p>
        <p style="margin-top: 15px; color: #666;">
            This page is under construction and will be made fancy later.
        </p>
    </div>
</div>
{{/if}}

