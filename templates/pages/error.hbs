<!-- Generic Error Page - EDK Style -->
<div class="error-page">
    {{> components/section-header title=(concat "Error " statusCode) icon="campaign" bordered=true}}

    <table class="kb-table" cellspacing="1">
        <thead>
            <tr class="kb-table-header">
                <th class="kb-table-header">
                    <span style="font-size: 14px;">‚ö†Ô∏è Something went wrong</span>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr class="kb-table-row-even">
                <td class="kb-table-cell text-center p-lg">
                    <p class="error-page__message">
                        {{#if message}}
                            {{message}}
                        {{else}}
                            An unexpected error occurred.
                        {{/if}}
                    </p>
                    {{#if description}}
                    <p class="error-page__description mt-md">
                        {{description}}
                    </p>
                    {{/if}}
                </td>
            </tr>
            <tr class="kb-table-row-odd">
                <td class="kb-table-cell text-center p-md">
                    <a href="/" class="error-page__btn error-page__btn--primary">üè† Home</a>
                    <a href="javascript:history.back()" class="error-page__btn error-page__btn--secondary">‚Üê Go Back</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
