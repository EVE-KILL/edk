<!-- Character Detail - EDK Style -->

<!-- Character Stats Header -->
{{> partials/entity-stats}}

<!-- Character Navigation Tabs -->
{{> partials/entity-navbar}}

<!-- Ship Group Statistics (Combined Kills & Losses) -->
{{#if shipGroupStats}}
<div style="margin-bottom: 20px;">
    <div class="block-header2">Ship Groups (Last 30 Days)</div>
    {{> components/ship-group-combined-stats columns=shipGroupColumns}}
</div>
{{/if}}

<!-- Recent Activity with Top 10 Sidebar -->
<div style="display: grid; grid-template-columns: 20% 80%; gap: 5px; width: 100%; box-sizing: border-box; margin-bottom: 20px;">
  <!-- Top 10 Sidebar -->
  <aside style="min-width: 0; overflow: hidden;">
    {{#if top10Stats}}
      {{> components/top-10-stats top10Stats=top10Stats}}
    {{/if}}
  </aside>

  <!-- Recent Killmails -->
  <section style="min-width: 0; overflow: hidden;">
      <div class="block-header2">Recent Activity (Last 20)</div>
      {{> partials/killmail-list killmails=recentKillmails}}
  </section>
</div>

