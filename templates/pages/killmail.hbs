                    <td class="kb-table-cell"><b>Fit Value:</b></td>
                    <td class="kb-table-cell" style="text-align: right;" colspan="4">
                        <span class="isk-value">{{formatISK stats.fitValue}}</span>
                    </td>
                </tr>
                <tr class="kb-table-row-even">
                    <td class="kb-table-cell"><b>Ship Value:</b></td>
                    <td class="kb-table-cell" style="text-align: right;" colspan="4">
                        <span class="isk-value">{{formatISK stats.shipValue}}</span>
                    </td>
                </tr>

            </table>
        </div>

    </div>

    <!-- Right Column - People -->
    <div style="flex: 35; min-width: 0;">

        <!-- Victim Info -->
        <div style="margin-bottom: 10px;">
            {{> partials/killmail-victim-info}}
        </div>

        <!-- Final Blow -->
        {{#if finalBlow}}
        <div style="margin-bottom: 10px;">
            <div class="block-header2">Final Blow</div>

            <table class="kb-table" cellspacing="1" style="width: 100%;">
                <tr class="kb-table-row-even">
                    <td class="kb-table-cell" style="width: 40px; padding: 4px; vertical-align: top;">
                        {{#if finalBlow.character.id}}
                        <img src="https://images.evetech.net/characters/{{finalBlow.character.id}}/portrait?size=32"
                             style="width: 32px; height: 32px; display: block; border-radius: 2px;"
                             alt="{{finalBlow.character.name}}" />
                        {{/if}}
                    </td>
                    <td class="kb-table-cell" style="padding: 4px; font-size: 9px; line-height: 1.3; overflow: hidden;">
                        <div style="margin-bottom: 2px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><b style="font-size: 10px;">{{finalBlow.character.name}}</b></div>
                        <div style="color: #999; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{finalBlow.corporation.name}}</div>
                        {{#if finalBlow.alliance.name}}
                        <div style="color: #999; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{finalBlow.alliance.name}}</div>
                        {{/if}}
                    </td>
                </tr>
                <tr class="kb-table-row-odd">
                    <td class="kb-table-cell" style="width: 40px; padding: 4px; vertical-align: top;">
                        {{#if finalBlow.ship.typeId}}
                        <img src="https://images.evetech.net/types/{{finalBlow.ship.typeId}}/icon?size=32"
                             style="width: 32px; height: 32px; display: block;"
                             alt="{{finalBlow.ship.name}}" />
                        {{/if}}
                    </td>
                    <td class="kb-table-cell" style="padding: 4px; font-size: 9px; line-height: 1.3; overflow: hidden;">
                        <div style="margin-bottom: 2px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><b style="font-size: 10px;">{{finalBlow.ship.name}}</b></div>
                        {{#if finalBlow.weapon.name}}
                        <div style="color: #999; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{finalBlow.weapon.name}}</div>
                        {{/if}}
                        <div class="kl-kill" style="font-weight: bold; font-size: 10px;">{{finalBlow.damageDone}} damage</div>
                    </td>
                </tr>
            </table>
        </div>
        {{/if}}

        <!-- Involved Parties -->
        {{#if attackers}}
        <div style="margin-top: 10px;">
            <table class="kb-table" cellspacing="1" style="width: 100%;">
                <tr class="kb-table-header">
                    <td class="kb-table-header" colspan="2" style="text-align: left; padding: 2px 4px;">Involved Parties ({{attackers.length}})</td>
                </tr>

                {{#each attackers}}
                <tr class="{{#if (mod @index 2)}}kb-table-row-odd{{else}}kb-table-row-even{{/if}}{{#if finalBlow}} finalblow{{/if}}">
                    <td class="kb-table-cell" style="width: 40px; padding: 4px; vertical-align: top;">
                        <div style="position: relative; width: 32px; height: 32px;">
                            {{#if character.id}}
                            <img src="https://images.evetech.net/characters/{{character.id}}/portrait?size=32"
                                 style="width: 32px; height: 32px; display: block; border-radius: 2px;"
                                 alt="{{character.name}}" />
                            {{/if}}
                            {{#if corporation.id}}
                            <img src="https://images.evetech.net/corporations/{{corporation.id}}/logo"
                                 style="width: 16px; height: 16px; position: absolute; bottom: -2px; right: -2px; border: 1px solid #000; background: #000; border-radius: 1px;"
                                 alt="{{corporation.name}}" />
                            {{/if}}
                        </div>
                    </td>
                    <td class="kb-table-cell" style="padding: 4px; font-size: 9px; line-height: 1.3; overflow: hidden;">
                        <div style="margin-bottom: 1px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><b style="font-size: 10px;">{{character.name}}</b></div>
                        <div style="color: #999; font-size: 8px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{corporation.name}}</div>
                        {{#if alliance.name}}
                        <div style="color: #999; font-size: 8px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{alliance.name}}</div>
                        {{/if}}
                        <div style="margin-top: 2px; overflow: hidden;">
                            {{#if ship.name}}
                            <span style="color: #999; font-size: 8px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; display: inline-block; max-width: calc(100% - 60px);">{{ship.name}}</span>
                            {{/if}}
                            <span class="kl-kill" style="font-weight: bold; font-size: 9px; float: right;">{{damageDone}}</span>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
        {{/if}}

    </div>
</div>

<!-- Raw Killmail Link -->
<div style="margin-top: 20px; text-align: center;">
    <a href="#" onclick="ReverseContentDisplay('popup'); return false;" style="color: #9bb3e8;">
        View Raw Killmail
    </a>
    |
    <a href="/api/killmails/{{killmail.killmailId}}" style="color: #9bb3e8;">
