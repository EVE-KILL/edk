<!-- Character Navigation Tabs -->
<div style="margin: 20px 0 15px 0; border-bottom: 1px solid #777; padding-bottom: 0;">
    <a href="/character/{{character.id}}"
       style="display: inline-block; padding: 10px 20px; margin-right: 2px; margin-bottom: -1px; background: {{#if (eq currentTab 'dashboard')}}#2a2a2a{{else}}transparent{{/if}}; border: 1px solid {{#if (eq currentTab 'dashboard')}}#777{{else}}transparent{{/if}}; border-bottom: {{#if (eq currentTab 'dashboard')}}1px solid #2a2a2a{{else}}1px solid #777{{/if}}; color: {{#if (eq currentTab 'dashboard')}}#fff{{else}}#999{{/if}}; text-decoration: none; font-size: 11px; font-weight: {{#if (eq currentTab 'dashboard')}}bold{{else}}normal{{/if}}; transition: all 0.2s;">
        DASHBOARD
    </a>
    <a href="/character/{{character.id}}/kills"
       style="display: inline-block; padding: 10px 20px; margin-right: 2px; margin-bottom: -1px; background: {{#if (eq currentTab 'kills')}}#2a2a2a{{else}}transparent{{/if}}; border: 1px solid {{#if (eq currentTab 'kills')}}#777{{else}}transparent{{/if}}; border-bottom: {{#if (eq currentTab 'kills')}}1px solid #2a2a2a{{else}}1px solid #777{{/if}}; color: {{#if (eq currentTab 'kills')}}#fff{{else}}#999{{/if}}; text-decoration: none; font-size: 11px; font-weight: {{#if (eq currentTab 'kills')}}bold{{else}}normal{{/if}}; transition: all 0.2s;">
        KILLS
    </a>
</div>
