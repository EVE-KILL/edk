<div class="fitting-wheel-container" id="fittingWheel">
    <div class="fitting-wheel">
        <!-- Outer ring -->
        <div class="outer-ring">
            <svg viewBox="24 24 464 464" xmlns="http://www.w3.org/2000/svg">
                <g>
                    <circle cx="256" cy="256" r="224" style="fill: none; stroke: rgb(0, 0, 0); stroke-width: 16;"></circle>
                </g>
            </svg>
        </div>

        <!-- Inner ring -->
        <div class="inner-ring">
            <svg viewBox="24 24 464 464" xmlns="http://www.w3.org/2000/svg">
                <g>
                    <circle cx="256" cy="256" r="195" style="fill: none; stroke: rgb(0, 0, 0); stroke-width: 46; stroke-opacity: 0.6;"></circle>
                </g>
            </svg>
        </div>

        <!-- Ship container with image -->
        <div class="ship-container">
            <img src="https://images.evetech.net/types/{{victim.ship.typeId}}/render?size=1024" alt="{{victim.ship.name}}" class="ship-image" />

            <!-- Tooltip overlay -->
            <div class="center-tooltip-overlay hidden" id="tooltipOverlay">
                <div class="center-tooltip">
                    <div class="tooltip-name" id="tooltipName"></div>
                    <div class="tooltip-value" id="tooltipValue"></div>
                    <div class="tooltip-status" id="tooltipStatus"></div>
                </div>
            </div>
        </div>

        <!-- Slots container -->
        <div class="slots-container">
            <!-- High slots (destroyed) -->
            {{#each items.destroyed.highSlots}}
            <div class="slot high-slot" data-slot-type="high" data-slot-index="{{@index}}" data-type-id="{{typeId}}" data-name="{{name}}" data-price="{{#if price}}{{price.average}}{{else}}0{{/if}}" data-quantity="{{quantity}}" data-status="destroyed">
                <div class="module-container">
                    <img src="https://images.evetech.net/types/{{typeId}}/icon?size=64" alt="{{name}}" class="module-icon" />
                </div>
            </div>
            {{/each}}

            <!-- High slots (dropped) -->
            {{#each items.dropped.highSlots}}
            <div class="slot high-slot" data-slot-type="high" data-slot-index="{{@index}}" data-type-id="{{typeId}}" data-name="{{name}}" data-price="{{#if price}}{{price.average}}{{else}}0{{/if}}" data-quantity="{{quantity}}" data-status="dropped">
                <div class="module-container">
                    <img src="https://images.evetech.net/types/{{typeId}}/icon?size=64" alt="{{name}}" class="module-icon" />
                </div>
            </div>
            {{/each}}

            <!-- Med slots (destroyed) -->
            {{#each items.destroyed.medSlots}}
