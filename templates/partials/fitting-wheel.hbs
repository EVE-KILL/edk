                <div class="module-container">
                    <img src="https://images.evetech.net/types/{{typeId}}/icon?size=64" alt="{{name}}" class="module-icon" />
                </div>
            </div>
            {{/each}}

            <!-- Rig slots (destroyed) -->
            {{#each items.destroyed.rigSlots}}
