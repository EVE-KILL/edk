<!-- Pagination Component -->
{{#if pagination}}
<div style="text-align: right; margin: 15px 0; padding: 10px;">
    <div style="display: inline-block;">
        <!-- Previous Button -->
        {{#if pagination.hasPrevPage}}
        <a href="{{pagination.prevPageUrl}}" style="display: inline-block; padding: 8px 12px; margin: 0 2px; background: #1a1a1a; border: 1px solid #333; color: #fff; text-decoration: none; border-radius: 3px; font-size: 12px;">
            ← Previous
        </a>
        {{else}}
        <span style="display: inline-block; padding: 8px 12px; margin: 0 2px; background: #0a0a0a; border: 1px solid #222; color: #555; border-radius: 3px; font-size: 12px;">
            ← Previous
        </span>
        {{/if}}

        <!-- First Page -->
        {{#if pagination.showFirst}}
        <a href="/" style="display: inline-block; padding: 8px 12px; margin: 0 2px; background: #1a1a1a; border: 1px solid #333; color: #fff; text-decoration: none; border-radius: 3px; font-size: 12px;">
            1
        </a>
        <span style="display: inline-block; padding: 8px 12px; margin: 0 2px; color: #666; font-size: 12px;">...</span>
        {{/if}}

        <!-- Page Numbers -->
        {{#each pagination.pages}}
        {{#if (eq this ../pagination.currentPage)}}
        <span style="display: inline-block; padding: 8px 12px; margin: 0 2px; background: #333; border: 1px solid #555; color: #fff; font-weight: bold; border-radius: 3px; font-size: 12px;">
            {{this}}
        </span>
        {{else}}
        <a href="/?page={{this}}" style="display: inline-block; padding: 8px 12px; margin: 0 2px; background: #1a1a1a; border: 1px solid #333; color: #fff; text-decoration: none; border-radius: 3px; font-size: 12px;">
            {{this}}
        </a>
        {{/if}}
        {{/each}}

        <!-- Last Page -->
        {{#if pagination.showLast}}
        <span style="display: inline-block; padding: 8px 12px; margin: 0 2px; color: #666; font-size: 12px;">...</span>
        {{#if pagination.totalPages}}
        <a href="/?page={{pagination.totalPages}}" style="display: inline-block; padding: 8px 12px; margin: 0 2px; background: #1a1a1a; border: 1px solid #333; color: #fff; text-decoration: none; border-radius: 3px; font-size: 12px;">
            {{pagination.totalPages}}
        </a>
        {{/if}}
        {{/if}}

        <!-- Next Button -->
        {{#if pagination.hasNextPage}}
        <a href="{{pagination.nextPageUrl}}" style="display: inline-block; padding: 8px 12px; margin: 0 2px; background: #1a1a1a; border: 1px solid #333; color: #fff; text-decoration: none; border-radius: 3px; font-size: 12px;">
            Next →
        </a>
        {{else}}
        <span style="display: inline-block; padding: 8px 12px; margin: 0 2px; background: #0a0a0a; border: 1px solid #222; color: #555; border-radius: 3px; font-size: 12px;">
            Next →
        </span>
        {{/if}}
    </div>
</div>
{{/if}}
