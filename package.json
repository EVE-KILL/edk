{
  "name": "edk",
  "version": "0.1.0",
  "description": "EVE-KILL EDK - Real-time EVE Online killmail tracking and analytics system",
  "author": "Karbowiak",
  "repository": {
    "type": "git",
    "url": "https://github.com/EVE-KILL/edk.git"
  },
  "homepage": "https://eve-kill.com",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun run build:css && bun run build:openapi && nitro build",
    "build:css": "lightningcss --minify --bundle templates/default/public/edk.css -o templates/default/public/edk.optimized.css && purgecss --config purgecss.config.js && csso templates/default/public/edk.optimized.css --output templates/default/public/edk.optimized.css",
    "build:openapi": "bun cli.ts build:openapi",
    "dev": "bun --bun nitro dev",
    "preview": "node .output/server/index.mjs",
    "type-check": "bunx nitro prepare && bun tsc --noEmit",
    "test": "bun test --preload ./tests/setup.ts",
    "test:watch": "bun test --watch --preload ./tests/setup.ts",
    "lint": "eslint . --ext .ts,.js",
    "lint:yaml": "yamllint .",
    "format": "prettier --write .",
    "format:yaml": "prettier --write '**/*.{yml,yaml}'",
    "start": "bun run preview",
    "cli": "bun cli.ts",
    "cron": "bun cronjobs.ts",
    "ws": "bun ws.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@types/bun": "^1.3.3",
    "@types/handlebars": "^4.1.0",
    "@types/node": "^24.10.1",
    "@types/unbzip2-stream": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "commander": "^14.0.2",
    "csso-cli": "^4.0.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "h3": "^1.15.4",
    "husky": "^9.1.7",
    "lightningcss-cli": "^1.30.2",
    "lint-staged": "^16.2.7",
    "nitropack": "^2.12.9",
    "prettier": "^3.7.4",
    "purgecss": "^7.0.2"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "bullmq": "^5.65.1",
    "chalk": "^5.6.2",
    "cron": "^4.3.5",
    "csv-parser": "^3.2.0",
    "handlebars": "^4.7.8",
    "highlight.js": "^11.11.1",
    "ioredis": "^5.8.2",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "marked": "^17.0.1",
    "openai": "^6.10.0",
    "pidusage": "^4.0.1",
    "postgres": "^3.4.7",
    "prom-client": "^15.1.3",
    "sanitize-html": "^2.17.0",
    "typescript": "^5.9.3",
    "typesense": "^2.1.0",
    "unbzip2-stream": "^1.4.3",
    "unstorage": "^1.17.3",
    "yaml": "^2.8.2",
    "zod": "^4.1.13"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{yml,yaml}": [
      "yamllint"
    ],
    "!(chart/templates/**/*)*.{yml,yaml}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "xml2js": ">=0.5.0"
  }
}
